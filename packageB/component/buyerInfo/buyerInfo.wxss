.addpage-box{
  display: flex;
  flex-direction: column;
  padding-bottom: 4px;
  box-sizing: border-box;
}
.address-box{
  padding: 20rpx;
  font-size: 30rpx;
  position: relative;
  background: white;
  height: auto;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.address-info-box{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-right: 6px;
  box-sizing: border-box;
}
.address-icon{
  width: 48rpx;
  height: 48rpx;
}

.edit-info {
  padding: 30rpx 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  background: white;
}
.divide{
  width: 100%;
  height: 10px;
  background-color: #F7F7F7;
}
.edit-info>.need-hbb {
  height: 92rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 18rpx;
  border-bottom: 2rpx solid #eee;
}
.edit-info .needtitle {
  width: 20%;
  margin-right: 20rpx;
}
.needinput{
  flex: 1;
  height: 100%;
}
.needpicker{
  flex: 1;
  height: 92rpx;
  left: 30%;
}
.edit-info  .needpicker .needpicker-v {
  height: 92rpx;
  line-height: 92rpx;
  text-align: left;
  color: #808080;
}
.edit-info .edit-button {
  margin: 24rpx auto;
  width: 40%;
  height: 55rpx;
  line-height: 55rpx;
  border-radius: 50rpx;
  background-image: linear-gradient(to right, #4AC081 , #6cd67f);
  color: #fff;
  font-size: 28rpx;
}
.hoverClass{
  opacity: 0.8;
}