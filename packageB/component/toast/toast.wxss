.wx-toast-box{
  display: flex;
  width: 100%;
  justify-content: center;
  position: fixed;
  z-index: 99;
  top:50%;
  transform: translateY(-50%);
  transform: scale(0);
  opacity: 0;
}
.wx-toast-content{
  max-width: 80%;
  border-radius:6px;
  padding: 30rpx;
  background: rgba(0, 0, 0, 0.6);
}
.wx-toast-toast{
  height: 100%;
  width: 100%;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
}