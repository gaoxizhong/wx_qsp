.filter-box{
  width: 100%;
  height: 80rpx;
  background: #F3F3F1;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-left: 30rpx;
  box-sizing: border-box;
}
.filter-l{
  display: flex;
  align-items: center;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #4D4D4D;
}

.filter-r{
  width: auto;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}
.filter-r>view{
  width: auto;
  height: 100%;
  position: relative;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  padding: 0 30rpx;
}
.citveBox-items.active {
  font-weight: bold;
}
.citveBox-items.active::after{
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  border: 2px solid #000;
  box-sizing: border-box;
  width: 40%;
  border-radius: 10px;
  z-index: 1;
}
.list-box{
  width: 100%;
  height: auto;
  box-sizing: border-box;
  background: #fff;
  padding: 0 30rpx;
}
.items-box{
  width: 100%;
  padding: 30rpx 0 40rpx 0;
  box-sizing: border-box;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.items-box::before{
  content: '';
  width: 100%;
  height: 1px;
  transform: scaleY(0.5);
  position: absolute;
  left: 0;
  bottom: 0;
  background: #DDDDDD;
}
.items-box>view{
  font-size: 30rpx;
  width: auto;
}
.items-box>view .items-title{
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #000000;
}
.items-box>view .items-time{
  margin-top: 20rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #B0B0B1;
}
.items-box>view .items-num{
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #ED0000;
  text-align: right;
}
.items-balance{
  margin-top: 20rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #B0B0B1;
}
.items-box2{
  width: 100%;
  padding: 20rpx 20rpx 30rpx 20rpx;
  box-sizing: border-box;
  border-radius: 8px;
  box-shadow: 0px 0px 10px 0px #0000001a;
  margin-top: 20rpx;
}
.items-box2 .items-info{
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.items-box2 .items-info>view.items-info-l{
  flex: 1;
  display: flex;
}
.items-img {
  width: 182rpx;
  height: 170rpx;
  border-radius: 8px;
}
.itens-textbox{
  flex: 1;
  padding-left: 20rpx;
  box-sizing: border-box;
}
.items-t-title{
  font-size: 30rpx;
  font-weight: bold;
}
.items-t-m{
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
  box-sizing: border-box;
}
.items-t-time{
  font-size: 22rpx;
  font-family: PingFang;
  font-weight: 300;
  color: #4D4D4D;
  margin-top: 8rpx;
}
.items-info-pirce{
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #4D4D4D;
}
.items-box2-xh{
  font-size: 28rpx;
  font-family: FZDaHei-B02S;
  font-weight: bold;
  color: #000000;
  text-align: right;
}

.order-item{
  height: 132rpx;
  padding-right: 29rpx;
  border-bottom: 2rpx solid #f4f4f4;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  width: 100%;
}
.order-item image {
  width: 61rpx;
  height: 61rpx;
  border-radius: 50%;
  margin-right: 22rpx;
}
.order-list .order-item .order-info {
  flex: 1;
}
.order-item .hbb {
  flex: 1;
  font-size: 32rpx;
  text-align: right;
}
.order-item .order-info text {
  display: block;
}
.order-item .order-info .name {
  font-size: 30rpx;
  color: #333;
}
.order-item .order-info .time {
  font-size: 26rpx;
  color: #999;
  width: 470rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

