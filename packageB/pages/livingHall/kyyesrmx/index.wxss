.search-box {
  height: 94rpx;
  padding-left: 30rpx;
  background-color: #F6F6F6;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.search-box .search-button {
  width: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.search-box .search-button text {
  margin-right: 8rpx;
  font-size: 28rpx;
  color: #333;
}
.search-box .search-button image {
  width: 20rpx;
  height: 14rpx;
}
.order-list {
  width: 96%;
  margin: 0 auto;
  box-sizing: border-box;
  background-color: #fff;
  font-size: 24rpx;
  z-index: 100;
}
.order-list {
  width: 96%;
  margin: 0 auto;
  box-sizing: border-box;
  background-color: #fff;
  font-size: 24rpx;
  z-index: 100;
}
.order-list .order-item {
  height: 132rpx;
  border-bottom: 2rpx solid #f4f4f4;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.order-list .order-item .order-info {
  flex: 1;
}
.order-list .order-item .hbb {
  flex: 1;
  font-size: 32rpx;
  text-align: right;
}
.order-list .order-item .order-info text {
  display: block;
}
.order-list .order-item .order-info .name {
  font-size: 30rpx;
  color: #333;
}
.order-list .order-item .order-info .time {
  font-size: 26rpx;
  color: #999;
  width: 470rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  word-break: break-all;
}
.search-condition {
  font-size: 28rpx;
  height: 200px;
  padding: 0 2%;
}
.search-condition .date-choose {
  width: 100%;
}
.search-condition .btn-search {
  margin-top: 80rpx;
}
.search-condition .btn-search button {
  width: 304rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-image: linear-gradient(to right, #2eae84 , #6cd67f);
  border-radius: 40rpx;
  margin: 0 auto;
  padding: 0;
  color: #fff;
}
.search-condition .start-time {
  padding-top: 76rpx;
  margin-bottom: 60rpx;
}
.search-condition .end-time {
  margin-bottom: 60rpx;
}
