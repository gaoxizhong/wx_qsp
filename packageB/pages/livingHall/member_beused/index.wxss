page{
  padding: 10rpx 30rpx;
  box-sizing: border-box;
  background: #f4f4f4;
}
.beusedList-box{
  width: 100%;
}
.beused-items-box{
  width: 100%;
  margin-top: 20rpx;
  background: #fff;
  border-radius: 6px;
  padding: 24rpx 30rpx 30rpx;
  font-size: 30rpx;
  box-sizing: border-box;
}
.beused-items-tbox{
  width: 100%;
  padding-bottom: 24rpx;
  border-bottom: 1px solid #f2f2f2;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.photo-title-box{
  flex: 1;
  display: flex;
  align-items: center;
}
.photo-title-box>.photo-image {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  overflow: hidden;
}
.photo-title-box>text{
  font-size: 28rpx;
  padding-left: 10rpx;
}
.beused-items-infobox{
  width: 100%;
  padding: 20rpx 0;
  display: flex;
}
.beused-items-infobox>image{
  width: 105rpx;
  height: 105rpx;
}
.items-infobox-left{
  padding-left: 20rpx;
  font-size: 28rpx;
  color: #565656;
}
.items-btnbox{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.items-btnbox1{
  width: 140rpx;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  font-size: 28rpx;
  background: #ff0000;
  color: #fff;
  border-radius: 20px;
}
.hoverClass{
  opacity: 0.8;
}
.num {
  width: 220rpx;
  height: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  box-sizing: border-box;
  margin-right: 10rpx;
}

.num .input {
  text-align: center;
}
.minuadd-box {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 44rpx;
  font-weight: 600;
  color: #464646;
  padding: 4px 20rpx;
  box-sizing: border-box;
}



.hyk-box1 {
  width: 100%;
  height: auto;
  font-size: 30rpx;
  padding: 20rpx 40rpx 20rpx 30rpx;
  box-sizing: border-box;
  background-color: #fff;
  margin-top: 12rpx;
}
.ksy-titlebox {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 26rpx;
  width: 100%;
}
.tbox-img {
  width: 32rpx;
  margin-left: 4px;
}
.zy-box {
  padding-top: 20rpx;
  color: #656565;
  font-size: 28rpx;
}
.discount-price {
  width: 100%;
  display: flex;
  align-items: center;
  font-size: 26rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
}
.discount-price>text {
  width: auto;
  margin-right: 12rpx;
}
.m-swview-box {
  flex: 1;
  display: flex;
  align-items: center;
  font-size: 26rpx;
}
.m-swview-box>input{
  width: 120rpx;
  height: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  box-sizing: border-box;
  background: #d1d1d170;
  padding-left: 12rpx;
  margin-right: 10rpx;
}
.switchvalue {
  color: #666;
}
