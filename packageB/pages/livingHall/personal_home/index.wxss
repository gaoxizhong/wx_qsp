page{
  box-sizing: border-box;
  background: #f2f2f2;
}
.home-info-box{
  width: 100%;
  height: auto;
  background-color: #fff;
}
.lifeimg-box{
  width: 100%;
  height: 398rpx;
  position: relative;
}
.lifeimg-box .swiper {
  height: 100%;
}
.lifeimg-box .swiper image {
  width: 100%;
  height: 100%;
}
.lifeimg-infobtn-box {
  width: 100%;
  box-sizing: border-box;
  height: 144rpx;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: absolute;
  left: 0;
  bottom: 28rpx;
}
.lifeimg-infobtn-box-l {
  flex: 1;
  height: 100%;
  display: flex;
  align-items: center;
}
.lifeimg-infobtn-box-r {
  width: 98rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.lifeimg-photo-box {
  width: 102rpx;
  height: 102rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 2px solid #fff;
}
.lifeimg-name-title {
  flex: 1;
  padding-left: 14rpx;
  font-size: 26rpx;
}
.lifeimg-photo-box>image {
  width: 100%;
  height: 100%;
}
.lifeimg-n-t {
  color: #fff;
}
.lifeimg-n-btn {
  width: 134rpx;
  height: 52rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  padding: 0 12rpx;
  border-radius: 20px;
  background: #ffffffad;
  margin-top: 10rpx;
}
.lifeimg-infobtn-box-r>.type-item {
  width: auto;
  height: 100%;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  color: #fff;
  line-height: 1;
  margin: 0;
  padding: 0;
}
.lifeimg-infobtn-box-r>.type-item image {
  width: 48rpx;
}
.hoverClass{
  opacity: 0.8;
}
.citveBox{
  width: 100%;
  height: 86rpx;
  box-sizing: border-box;
  padding: 6rpx 0;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  background: #fff;
}
.citveBox>view.citveBox-items {
  flex: 1;
  height: 100%;
  border-radius: 6px;
  position: relative;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}
.citveBox-items.itemsHover{
  font-weight: bold;
}
.citveBox-items.itemsHover::after{
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  border: 2px solid #000;
  box-sizing: border-box;
  width: 20%;
  border-radius: 10px;
  z-index: 1;
}
.infoList-box{
  width: 100%;
  box-sizing: border-box;
  padding: 0 20rpx;
}
.infoList-items-box{
  margin: 20rpx 0;
  border-radius: 6px;
  background: #fff;
  overflow: hidden;
  height: auto;
  padding-bottom: 20rpx;
}
.infoList-items-imagebox{
  width: 100%;
  height: auto;
}
.infoList-items-imagebox .swiper{
  width: 100%;
  height: 384rpx;
}
.infoList-items-imagebox .swiper image {
  width: 100%;
  height: 328rpx;
}
.infoList-items-title{
  width: 100%;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.infoList-items-time{
  padding: 0 20rpx 10rpx;
  font-size: 22rpx;
  color: #707070;
}
.infoList-items-pirce{
  padding: 0 20rpx 20rpx;
  box-sizing: border-box;
  font-size: 32rpx;
  color: #f54c0a;
  font-weight: bold;
}
.infoList-items-btnbox{
  width: 100%;
  height: auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.infoList-items-iconbox{
  flex: 1;
  display: flex;
  align-items: center;
  font-size: 26rpx;
}
.infoList-items-btn{
  width: 142rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  border-radius: 20px;
  background: #f4510b;
}
.infoList-items-iconbox>.iconbox-btn {
  padding: 0 12rpx;
  box-sizing: border-box;
  line-height: 1;
  font-size: 24rpx;
  margin: 0;
}
.infoList-items-iconbox>.iconbox-btn .infoList-items-iconi{
  display: flex;
  align-items: center;
  font-size: 24rpx;
}
.infoList-items-iconbox>.iconbox-btn .infoList-items-iconi image{
  width: 40rpx;
  height: 40rpx;
}
.infoList-items-iconbox>.iconbox-btn .infoList-items-iconi text{
  padding-left: 2rpx;
}
.infoList-items-iconbox>.iconbox-btn .infoList-items-icont{
  margin-top: 10rpx;
  color: #7e7e7e;
  text-align: center;
}
.cler-marsk {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
  background: #00000020;
}
.cler-box {
  width: 552rpx;
  background: #fff;
  border-radius: 8px;
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  z-index: 9999;
  overflow: hidden;
}
.cler-title {
  width: 100%;
  height: 176rpx;
  line-height: 176rpx;
  text-align: center;
}
.cler-btn-box {
  width: 100%;
  height: 104rpx;
  display: flex;
  align-items: center;
}
.cler-btn-box>view {
  flex: 1;
  height: 100%;
  line-height: 104rpx;
  text-align: center;
}
.cler-btn-r {
  background: #fe5127;
  color: #fff;
}
.addwx-wrap {
  background: #f4f4f4;
  padding: 24rpx;
  position: fixed;
  bottom: 0;
  left: 50%;
  width: 100%;
  box-sizing: border-box;
  transform: translate(-50%, 0);
  display: flex;
  align-items: center;
  z-index: 99999;
}
.addwx-wrap .inp {
  font-size: 28rpx;
  background: #fff;
  border-radius: 8rpx;
  height: 64rpx;
  padding-left: 20rpx;
  line-height: 64rpx;
  flex: 1;
}
.addwx-wrap .send-btn {
  background: #f45004;
  border-radius: 8rpx;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 28rpx;
  color: #fff;
  display: block;
  padding: 0 34rpx;
  margin-left: 36rpx;
}
