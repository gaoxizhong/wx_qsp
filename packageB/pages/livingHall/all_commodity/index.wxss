page{
  padding: 20rpx 15rpx;
  box-sizing: border-box;
  background: #f2f2f2;
}
.commodityList-box{
  width: 100%;
  height: auto;
  display: flex;
  flex-wrap: wrap;
}
.commodityList-box>view{
  width: 50%;
  height: auto;
  box-sizing: border-box;
  padding: 0 15rpx;
  margin: 10rpx 0;
}
.scroll-workList-item_H {
  display: inline-block;
  width: 100%;
  height: auto;
  border-radius: 8px;
  overflow: hidden;
  background: #fff;
  box-sizing: border-box;
}
.item_Himage-box {
  width: 100%;
  height: 204rpx;
  display: flex;
  align-items: center;
}
.item_Himage-box>image {
  display: inline-block;
}
.item_Himage-poto {
  width: 148rpx;
  height: 100%;
}
.item_Himage-workimg {
  flex: 1;
  height: 100%;
}
.scroll-workList-info {
  width: 100%;
  padding: 20rpx;
  overflow: hidden;
  box-sizing: border-box;
}
.scroll-workList-title {
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  white-space: pre-wrap;
}
.scroll-workList-f {
  width: 100%;
  margin-top: 18rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
}
.scroll-workList-l {
  color: #ff4d1f;
  font-size: 32rpx;
  text-align: left;
  flex: 1;
}
.scroll-workList-rbtn {
  width: 122rpx;
  height: 56rpx;
  line-height: 56rpx;
  color: #fff;
  background: #fa5400;
  text-align: center;
  border-radius: 20px;
  font-size: 24rpx;
}

.hoverClass{
  opacity: 0.8;
}