  .dianzan-box{
    width: 100%;
    height: auto;
    display: flex;
    flex-wrap: wrap;
  }
  .dianzan-box>view {
    width: 50%;
    height: auto;
    box-sizing: border-box;
    padding: 0 15rpx;
    margin: 10rpx 0;
  }
  .dianzan-box .scroll-workList-item_H {
    display: inline-block;
    width: 100%;
    height: auto;
    border-radius: 8px;
    overflow: hidden;
    background: #fff;
    box-sizing: border-box;
  }
  .dianzan-box .item_Himage-box {
    width: 100%;
    height: 204rpx;
    display: flex;
    align-items: center;
  }
  .dianzan-box .scroll-workList-info {
    width: 100%;
    padding: 20rpx;
    overflow: hidden;
    box-sizing: border-box;
}
.dianzan-box .item_Himage-workimg {
  flex: 1;
  height: 100%;
}
.dianzan-box .item_Himage-box>image {
  display: inline-block;
}
.dianzan-box .scroll-workList-title {
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  white-space: pre-wrap;
}
.dianzan-box .scroll-workList-f {
  width: 100%;
  margin-top: 18rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
}
.dianzan-box .scroll-workList-f>view {
  color: #989898;
  font-size: 26rpx;
  box-sizing: border-box;
}
.dianzan-box .scroll-workList-l {
  text-align: left;
  flex: 1;
  display: flex;
  align-items: center;
}
.dianzan-box .scroll-workList-f>view>image {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
}
.dianzan-box .scroll-workList-f>view>text {
  padding-left: 10rpx;
  box-sizing: border-box;
  flex: 1;
}
