page{
  padding: 20rpx;
  box-sizing: border-box;
  background: #f4f4f4;
}
.beusedList-box{
  width: 100%;
  margin-top: 10rpx;
}
.beused-items-box{
  width: 100%;
  margin-top: 20rpx;
  background: #fff;
  border-radius: 6px;
  padding: 24rpx 30rpx 30rpx;
  font-size: 30rpx;
  box-sizing: border-box;
}
.beused-items-tbox{
  width: 100%;
  padding-bottom: 24rpx;
  border-bottom: 1px solid #f2f2f2;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.photo-title-box{
  flex: 1;
  display: flex;
  align-items: center;
}
.photo-title-box>.photo-image {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  overflow: hidden;
}
photo-title-box>text{
  font-size: 28rpx;
}
.beused-items-infobox{
  width: 100%;
  padding: 20rpx 0;
  display: flex;
}
.beused-items-infobox>image{
  width: 105rpx;
  height: 105rpx;
}
.items-infobox-left{
  padding-left: 20rpx;
  font-size: 28rpx;
  color: #565656;
}
.items-btnbox{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.items-btnbox1{
  width: 140rpx;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  font-size: 28rpx;
  background: #f4510b;
  color: #fff;
  border-radius: 20px;
}
.hoverClass{
  opacity: 0.8;
}
.tab-h1{
  overflow: none;
  padding: 0 5rpx;
}

.items-btnbox1.active{
  background: #F1F3F6 !important;
  color: #999 !important;
}
.tab-item {
  text-align: center;
  font-size: 28rpx;
  color: #353535;
  position: relative;
  display: block;
  width: 50%;
  height: auto;
  background: #fff;
  padding: 0;
  }
.tab-item button {
  font-size: 30rpx;
  color: #333;
  border-radius: 0;
  font-weight: 700;
  height: 68rpx;
  line-height: 68rpx;
}
 .tab-item.active button,.tab-item1.active button,.tab-item2.active button {
  background-color: #29c572;
  color: #ffffff;
  
  }
  .tab-item1.active-1 button,.tab-item2.active-1 button {
    background-color: #e96907;
    color: #ffffff;
    }
  
  .tab-item1 button {
    border-top-left-radius: 6px;
    border-bottom-left-radius: 6px;
  }
  .tab-item2 button {
    border-top-right-radius: 6px;
    border-bottom-right-radius: 6px;
  }



