page {
  font-family: PingFangSC-Regular,PingFang SC;
  font-weight: 400;
  background-color: #fff;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}
.need-hbb {
  padding: 20rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #eee;
}
.activity-desc {
  display: flex;
  justify-content: flex-start;
  align-items: stretch;
  height: 238rpx;
  position: relative;
  width: 100%;
  padding: 20rpx 0;
  box-sizing: border-box;
}
.activity-desc textarea{
  font-size: 28rpx;
  padding: 12rpx 18rpx;
  height: 100%;
  flex: 1;
  border: 2rpx solid #f2f2f2;
  border-radius: 8rpx;
  box-sizing: border-box;
}
.activity-imgs {
  box-sizing: border-box;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
  padding-left: 16rpx;
}
.activity-imgs>view.imgs-box {
  position: relative;
  border-radius: 8px;
}
.activity-imgs view.add-pic {
  width: 200rpx;
  height: 200rpx;
  border: none;
  background: none;
  margin-top: 20rpx;
}
.activity-imgs .imgs-box{
  width: 200rpx;
  height: 200rpx;
  margin-right: 24rpx;
  margin-top: 10rpx;
  display: inline-block;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
}
.activity-imgs .img-close{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 0;
  right: 0;
}
.activity-imgs .img-close image{
  width: 100%;
  height: 100%;
  display: inline-block;
}
.activity-imgs image {
  display: inline-block;
  width: 100%;
  height: 100%;
}
.activity-imgs view.add-pic image {
  width: 100%;
  height: 100%;
  margin-top: 0;
  margin-left: 0;
}
.add-box {
  padding: 20rpx 0 0;
  box-sizing: border-box;
  margin-top: 10rpx;
}
.add-title-text {
  font-size: 32rpx;
  padding-left: 20rpx;
  font-weight: 600;
}  
.add-box1 {
  box-sizing: border-box;
  padding: 15rpx 0 0 10rpx;
  font-size: 28rpx;
  overflow: hidden;
}
.add-box1-items {
  width: 100%;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}
.add-box1-items .weui-cell__hd{
  transform: scale(0.8);
}
.scll-list-items {
  padding-left: 4rpx;
  width: 100%;
}
.box1-scroll {
  white-space: nowrap;
  padding: 10rpx 0;
  overflow: hidden;
}
.box-scroll-method {
  padding: 10rpx 20rpx;
  border-radius: 20px;
  font-size: 28rpx;
  background: #fff9f8;
  display: inline-block;
  width: auto;
  margin: 10rpx 20rpx 15rpx 0;
  text-align: center;
  position: relative;
  color: #666;
}
.box-scroll-method.movebox{
  /* background: #f1500a; */
  color: #f1500a;
}
.box-scroll-method.active {
  background: #fff0e0;
  color: #fb4b0a;
}

.add-box1-items radio-group{
  width: 100%;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-evenly;
  margin-top: 12rpx;
}
.weui-cell{
  width: 262rpx;
  height: 84rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-radius: 20px;
  padding: 0 20rpx;
  box-sizing: border-box;
  margin: 0 15rpx;
  font-size: 30rpx;
}
.weui-cell.is_sale{
  border: 1px solid #fb4b0a;
  color: #fb4b0a;
}
.weui-cell.no_sale{
  border: 1px solid #ddd;
  color: #000;
}
.title-price {
  padding: 20rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #eee;
  margin-top: 20rpx;
}
.add-title {
  box-sizing: border-box;
  display: flex;
  align-items: center;
}
.add-title image {
  width: 48rpx;
  height: 48rpx;
}
.title-right{
  width: 264rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  color: #fc4e01;
  font-size: 32rpx;
  font-weight: bold;
}
.title-price .title-toFix {
  width: auto;
  font-size: 38rpx;
}
.title-price input{
  flex: 1;
  font-size: 30rpx;
  background: #f1f1f166;
  padding: 10rpx;
}
.discount-price {
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 18rpx 0;
  font-size: 30rpx;
}
.discount-price input{
  font-size: 30rpx;
  background: #f1f1f166;
  padding: 10rpx;
}
.checkbox-group {
  flex: 1;
  font-size: 25rpx;
  padding-left: 30rpx;
}
.checkbox-group .checkbox {
  margin-right: 30rpx;
}
.delivery{
  padding: 20rpx 0;
}
.delivery checkbox-group {
  width: 100%;
  display: block;
}
.delivery checkbox-group .checkbox {
  width: 60%;
}
.delivery .settingPrice {
  color: #fc4e01;
  width: 20%;
  text-align: end;
  overflow: hidden;
}
.create-btn-box {
  border-radius: none;
  width: 484rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
  font-size: 32rpx;
  margin: 60rpx auto;
  text-align: center;
  background: #f1500a;
  border-radius: 20px;
}
.hoverClass{
  opacity: 0.8;
}
