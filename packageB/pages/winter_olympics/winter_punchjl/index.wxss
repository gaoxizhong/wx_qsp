page{
  width: 100%;
  height: 100%;
  background-image: url('https://oss.qingshanpai.com/icon/wintermap-bg2.jpg');
  background-size: 100% 100%;
  background-repeat: no-repeat;
  box-sizing: border-box;
}
.gz-box{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  font-size: 30rpx;
  box-sizing: border-box;
  border: 1px solid #00000020;
  overflow: scroll;
  display: flex;
  align-items: center;
  justify-content: center;
}
.position-box{
  width: 610rpx;
  background: #fff;
  border-radius: 8px;
  padding: 20rpx;
  box-sizing: border-box;
}
.cssm-info-box {
  width: 100%;
  font-size: 28rpx;
}

.cssm-info-box>view {
  display: flex;
  align-items: flex-start;
  padding: 5rpx 0;
  box-sizing: border-box;
  line-height: 1.5;
  overflow-y: scroll;
  height: auto;
  max-height: 226rpx;
}
.cssm-info-box>view>text{
  height: auto;
  float: left;
}
.gift-box{
  padding: 0 10rpx 20rpx 10rpx;
  box-sizing: border-box;
  height: 278rpx;
  overflow: scroll;
}

.giftlist-box{
  width: 100%;
  height: auto;
  max-height: 112rpx;
  padding: 20rpx 0;
  box-sizing: border-box;
  font-size: 28rpx;
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  position: relative;
}
.giftlist-box::after{
  content: '';
  width: 100%;
  height: 1px;
  transform: scaleY(0.5);
  position: absolute;
  left: 0;
  bottom: 0;
  background: #e0e0e0;
}
.giftlist-l{
  width: 88rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.giftlist-l>image{
  width: 78rpx;
  height: 86rpx;
  border-radius: 8px;
}

.giftlist-m{
  flex: 1;
  font-size: 30rpx;
  display: flex;
  align-items: flex-start;
  flex-direction: column;
  justify-content: center;
  padding-left: 10rpx;
}
.giftlist-r{
  width: 140rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  box-sizing: border-box;
}
.acList-r-btn {
  width: 112rpx;
  height: 50rpx;
  line-height: 50rpx;
  position: relative;
  text-align: center;
  margin: 8rpx 0;
  border-radius: 20px;
  box-shadow: 0 3px 4px #9acff2;
  box-sizing: border-box;
  background: #0388e2;
  color: #fff;
}
.dkcs-box{
  width: 100%;
  font-size: 30rpx;
  padding: 20rpx 10rpx;
  box-sizing: border-box;
}
.dkcs-title-imag{
  width: 400rpx;
  height: 84rpx;
  margin: 0 auto;
}
.dkjlgz-box{
  width: auto;
  border-radius: 20px;
  background: #1077bd;
  font-size: 26rpx;
  color: #fff;
  padding: 8rpx 12rpx;
  display: inline-block;
  margin: 10rpx 0;
}
.ts-box{
  font-size: 26rpx;
  color: #8f8f8f;
}