page{
  padding: 20rpx;
  box-sizing: border-box;
}
.winterPunch-title-box{
  height: auto;
  overflow: hidden;
}
.winterPunch-title-box>image{
  width: 100%;
  height: 100%;
}
.bg {
  background: #fff;
  position: relative;
  margin-top: 30rpx;
}
.textarea-wrp {
  padding: 0 20rpx;
  background-color: #fff;
  position: relative;
  box-shadow: 0 0rpx 6px #00000020;
}

.textarea-wrp textarea {
    width: 100%;
    padding: 25rpx 0;
    min-height: 110rpx;
    max-height: 500rpx;
    height: 110rpx;
    font-size: 28rpx;
    position: relative;
    z-index: 1;
}
.photo-box {
  padding: 25rpx 15rpx 15rpx;
  font-size: 0;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  margin-top: 20rpx;
}
.add-pic {
  width: 210rpx;
  height: 210rpx;
  position: relative;
  border-radius: 12rpx;
  background: #e0e0e0;
  display: flex;
  align-items: center;
  justify-content: center;
}
view.add-pic image {
  width: 84rpx;
  height: 84rpx;
}
.photo {
  width: 215rpx;
  height: 215rpx;
  box-sizing: border-box;
  font-size: 0;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  background: #fafbfc;
  overflow: hidden;
}
.photo image {
  width: 100%;
  height: 100%;
}
.acitiv_1 {
  padding: 12rpx 10rpx;
  font-size: 28rpx;
  color: #333;
  display: flex;
  align-items: center;
}
.acitiv_1>image{
  width: 34rpx;
}
.btn-send {
  padding: 60rpx 40rpx;
  width: 100%;
  background: #fff;
  box-sizing: border-box;
}
.btn-send button {
  width: 266rpx;
  height: 78rpx;
  background: #FA0502;
  border-radius: 20px;
  line-height: 78rpx;
  font-size: 30rpx;
  padding: 0;
  color: #fff;
  box-shadow: 0 6px 5px #FA050230;
}
.hover_color{
  opacity: 0.8;
}

.market-signup-box{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9999;
}
.market-signup-mark{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  background: #33333360;
  opacity: 0.6;
  filter: alpha(opacity=60);
}
.market-signup-infobox{
  position: fixed;
  top: 50%;
  left: 50%;
  width: 668rpx;
  height: 866rpx;
  transform: translate(-50%, -50%);
  padding: 150rpx 50rpx 10rpx;
  box-sizing: border-box;
  background-image: url(https://oss.qingshanpai.com/retraceLongMarch/r-bg3.png);
  background-size: 100% 100%;
  background-repeat: no-repeat;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.hoverClass{
  opacity: 0.8;
  filter: alpha(opacity=80);
}
.zsdfx-box{
  width: 280rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #E77D34;
  border-radius: 20px;
  text-align: center;
  font-size: 36rpx;
  font-family: Adobe Heiti Std;
  font-weight: normal;
  color: #FFFFFF;
  margin: 0 auto;
}
.zsdfx-btnbox{
  margin: 0 auto;
  width: 443rpx;
  height: 85rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #E50612;
  border-radius: 20px;
  color: #fff;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
}
.zsdfx-text{
  padding-top: 30rpx;
  padding-bottom: 20rpx;
  box-sizing: border-box;
  width: 100%;
  height: 530rpx;
  overflow-y: auto;
  font-size: 30rpx;
  text-align: left;
}