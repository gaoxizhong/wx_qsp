age{
  box-sizing: border-box;
  padding:0 0 30rpx 0;
}
.announcement-box {
  width: 100%;
  height: auto;
  margin: 0 auto;
  box-sizing: border-box;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  background: #fff;
}
.announcement-info-left {
  padding-top: 20rpx;
  width: 84rpx;
  height: 100%;
  box-sizing: border-box;
  display: flex;
  justify-content: flex-end;
  align-items: flex-start;
}
.announcement-info {
  flex: 1;
  height: auto;
  box-sizing: border-box;
  overflow: hidden;
}
.announcement-info-left>image {
  width: 52rpx;
  height: 42rpx;
}
.scroll_box {
  height: auto;
  font-size: 26rpx;
  padding: 20rpx 10rpx;
  box-sizing: border-box;
  color: #666;
}
.info-text>text{
  height: auto;
  float: left;
}
.xue-box-title{
  width: 100%;
  display: flex;
  align-items: center;
}
.xue-box-title image{
  width: 346rpx;
  height: 78rpx;
}
.xue-text-box{
  padding: 10rpx 30rpx;
  box-sizing: border-box;
}
.footer-btn{
  width: 454rpx;
  height: 70rpx;
  border-radius: 20px;
  background: #4ac081;
  color: #fff;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: fixed;
  bottom: 10px;
  left: 50%;
  transform: translateX(-50%);
}
.xue-text-box>image{
  width: 100%;
  height: auto;
  border-radius: 6px;
  overflow: hidden;
  margin: 23rpx 0;
  position: relative;
  box-shadow: 2rpx 4rpx 4px #00000020;
}


/* ===================   弹窗   ============================= */
.is-pop-mark {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.4;
  z-index: 9999;
}
.is-pop-box {
  width: 620rpx;
  height: auto;
  background: #fff;
  border-radius: 6px;
  padding: 12rpx 28rpx;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  z-index: 9999;
  box-sizing: border-box;
}
.btn-area {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 20px 0 10px;
}
.btn-area>button {
  width: 248rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  border-radius: 20px;
  background: #4ac081;
  font-size: 30rpx;
  color: #fff;
  padding: 0 30rpx;
}
.section-info-title {
  font-size: 32rpx;
  color: #333;
}
.page-section-title {
  margin-top: 10rpx;
  font-size: 28rpx;
  font-weight: 600;
}
.weui-cell__bd {
  margin: 14rpx 0;
  background: #f0f0f0ec;
}
.weui-input {
  font-size: 28rpx;
  padding: 6rpx;
}