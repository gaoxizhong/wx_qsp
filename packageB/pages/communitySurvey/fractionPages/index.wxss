.titleInfo-box {
  height: auto;
  z-index: 100;
  margin: 0 20rpx;
  box-sizing: border-box;
  border-radius: 6px;
  overflow: hidden;
  background: #fff;
  padding: 30rpx 20rpx;
  box-shadow: 0 0 10px 1px #00000020;
  margin-top: 20px;
}
.kapian-box{
  margin-top: 20rpx;
}
.kapian-box>view {
  text-align: center;
}
.kapian-2{
  font-size: 60rpx;
  font-weight: 600;
  color: #4ac081;
  padding: 25rpx 0;
}
.kapian-2>text{
  font-size: 38rpx;
}
.footer-btn{
  width: 454rpx;
  height: 70rpx;
  border-radius: 20px;
  background: #4ac081;
  color: #fff;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 20px auto;
}

.image-box {
  height: 118rpx;
  box-sizing: border-box;
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 32rpx;
}
.iamge-box-left {
  display: flex;
  align-items: center;
}
.image-box image {
  width: 102rpx;
  height: 102rpx;
  border-radius: 50%;
}
.image-box .name {
  color: #000000;
  padding-left: 20rpx;
}
.kapian-1{
  font-size: 30rpx;
}

.weui-cell__bd {
  margin: 14rpx 0;
}
.weui-input {
  font-size: 30rpx;
  padding: 6rpx;
}
.btn-area {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 20px 0 10px;
}
.btn-area>button {
  width: 248rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  border-radius: 20px;
  background: #4ac081;
  font-size: 30rpx;
  color: #fff;
  padding: 0 30rpx;
}
.xue-text-box>image {
  width: 100%;
  height: auto;
  border-radius: 6px;
  overflow: hidden;
  margin: 23rpx 0;
  position: relative;
  box-shadow: 2rpx 4rpx 4px #00000020;
}
.xue-text-box {
  padding: 30rpx 20rpx;
  box-sizing: border-box;
}
.promiseInfo-box{
  padding: 0 30rpx 30rpx;
  box-sizing: border-box;
}
.page-section{
  display: flex;
  align-items: center;
  justify-content: flex-end;
  font-size: 30rpx;
}
.weui-cells_after-title{
  margin-left: 6px;
}