page{
  box-sizing: border-box;
  padding: 10rpx 30rpx;
}
.anwer-title-box{
  width: 100%;
  padding: 20rpx 0;
  text-align: center;
  font-size: 36rpx;
  font-weight: 600;
  color: #4ac081;
}
.answer-list-box{
  width: 100%;
  height: auto;
  font-size: 28rpx;
}
.answer-items{
  width: 100%;
  margin: 20rpx auto;
}
.answer-options-box{
  width: 100%;
  padding: 10rpx 30rpx;
  box-sizing: border-box;
}
.options-list{
  margin: 20rpx 0;
  font-size: 28rpx;
}
.footer-box {
  width: 100%;
  height: 146rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  left: 0;
  bottom: 0;
}
.footer-status {
  width: 482rpx;
  height: 82rpx;
  background: #4ac081;
  color: #fff;
  line-height: 82rpx;
  text-align: center;
  border-radius: 20px;
}

/* ===================   弹窗   ============================= */
.is-pop-mark {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.4;
  z-index: 9999;
}
.is-pop-box {
  width: 620rpx;
  height: auto;
  background: #fff;
  border-radius: 6px;
  padding: 20rpx 28rpx;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  z-index: 9999;
  box-sizing: border-box;
}
.btn-area {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 20px 0 10px;
}
.btn-area>button {
  width: 248rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  border-radius: 20px;
  background: #4ac081;
  font-size: 30rpx;
  color: #fff;
  padding: 0 30rpx;
}
.section-info-title {
  font-size: 32rpx;
  color: #333;
}
.page-section-title {
  margin-top: 10rpx;
  font-size: 30rpx;
  font-weight: 600;
}
.weui-cell__bd {
  margin: 14rpx 0;
  background: #f0f0f0ec;
}
.weui-input {
  font-size: 30rpx;
  padding: 6rpx;
}