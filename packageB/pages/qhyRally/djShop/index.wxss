page {
  box-sizing: border-box;
  font-family: PingFangSC-Regular,PingFangSC;
  background: #f2f2f238;
}
.goodinfo {
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
  padding: 10rpx 20rpx;
}
.goodinfo>view.goToInfo {
  width: 50%;
  height: auto;
  margin: 20rpx 0;
  padding: 0 10rpx;
  box-sizing: border-box;
}
.goodinfo>view.goToInfo .good-item-view {
  width: 100%;
  position: relative;
  height: auto;
  box-sizing: border-box;
  border-radius: 6px;
  overflow: hidden;
  box-shadow: 0rpx 0rpx 4px#00000020;
  background: #fff;
}
.good-item-view>view.imagebox {
  width: 100%;
  height: 384rpx;
  position: relative;
}
.item-title-name {
  padding: 20rpx 0;
  height: 134rpx;
  box-sizing: border-box;
}
.good-item-view image.good-item-img {
  width: 100%;
  height: 100%;
  justify-content: center;
  display: block;
  border-radius: 6px;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}
.member-view {
  width: 100%;
  height: 40rpx;
  position: absolute;
  left: 0;
  bottom: 10px;
  z-index: 2;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.good-item-view .goodname {
  font-size: 28rpx;
  color: #333;
  display: block;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  margin-top: 10rpx;
  padding: 0 10rpx;
  font-weight: 600;
}
.idle-avar-box {
  width: 100%;
  display: flex;
  align-items: flex-start;
  box-sizing: border-box;
  padding: 10rpx 10rpx;
}
.idle-avar-box>image {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
}
.idle-avar-text {
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.idle-avar-box>text {
  margin-left: 12rpx;
  font-size: 24rpx;
  color: #999;
  flex: 1;
}