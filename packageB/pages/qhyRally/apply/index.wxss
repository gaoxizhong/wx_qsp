page{
  box-sizing: border-box;
  position: relative;
  background: #f2f2f2;
}
.swiper-container{
  width: auto;
  height: 280rpx;
}
.swiper-container .swiper{
  height: 100%;
}
.swiper-container image {
  width: 100%;
  height: 280rpx;
}
.addInfo-box{
  width: auto;
  margin: 0 20rpx;
  padding: 10rpx 20rpx;
  background: #fff;
  position: relative;
  box-sizing: border-box;
  font-size: 30rpx;
  margin-top: 24rpx;
}
.addInfo-box .garden-box {
  display: flex;
  align-items: center;
  margin: 20rpx 0;
}
.addInfo-box .types-i {
  margin: 18rpx 0;
  font-size: 28rpx;
  width: 135rpx;
}
.types-input {
  flex: 1;
  z-index: 0;
  padding: 10rpx 0 10rpx 20rpx;
  background: #f2f2f2;
  border-radius: 6px;
  font-size: 30rpx;
}
.addInfo-box .shengshi {
  font-size: 28rpx;
  color: #333232;
  background: #f2f2f2;
  line-height: 2.5;
  height: 100%;
  padding-left: 20rpx;
  border-radius: 6px;
}
.optionList-box{
  width: auto;
  margin: 30rpx 20rpx;
  background: #fff;
  padding: 20rpx 0;
  box-sizing: border-box;
}
.optionList-title{
  padding: 0 20rpx;
  font-size: 30rpx;
  color: #757575;
}
.popularActivity-list-box {
  width: 100%;
  padding: 10rpx 30rpx;
  box-sizing: border-box;
}
.popularActivity-list-box view.list-before {
  width: 100%;
  height: 150rpx;
  position: relative;
  display: flex;
  align-items: center;
}

.popularActivity-list-box view.list-before.list-before-b::before{
  content: '';
  width: 100%;
  height: 1px;
  transform: scaleY(0.5);
  -webkit-transform: scaleY(0.5);
  position: absolute;
  bottom: 0;
  left: 0;
  background: #c0c0c0; 
}
.index-list-img {
  width: 110rpx;
}
.popularActivity-list-titletext {
  flex: 1;
  padding-left: 20rpx;
  font-size: 30rpx;
}
.my-more {
  width: 48rpx;
}

.quan {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  border: 1rpx solid rgb(155, 155, 155);
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  background: #fff;
}
.quan.quan-in {
  background-color: #4AC081;
}
.listbox-btn {
  /* position: fixed;
  left: 0;
  bottom: 0; */
  width: 100%;
  background: #fff;
  box-sizing: border-box;
  padding: 20rpx;
  display: flex;
  justify-content: center;
  z-index: 99;
}
.listbox-btn>view{
  width: 50%;
  box-sizing: border-box;
  padding: 10rpx 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #fff;
}
.listbox-btn>view>view{
  width: 100%;
  height: 66rpx;
  border-radius: 6px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.listbox-leftbtn{
  background: #4ac081;
}
.listbox-rightbtn{
  background: #ff0000;
}
.weui-cell__hd>checkbox{
  transform: scale(0.8);
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked{
  border-color:#07c160 !important;
  background:#07c160 !important;
  color: #fff;
}
.hoverClass{
  opacity: 0.8;
}
.acquire-pop-box{
  width: 100%;
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 9999;
}
.acquire-pop-box .acquire-msk-box{
  width: 100%;
  height: 100%;
  background: rgb(0 0 0 / 18%);
}
.acquire-view-box{
  width: 80%;
  background: #fff;
  border-radius: 6px;
  padding: 30rpx 20rpx;
  box-sizing: border-box;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}