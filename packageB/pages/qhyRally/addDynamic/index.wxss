page{
  padding: 20rpx;
  box-sizing: border-box;
}
.winterPunch-title-box{
  height: auto;
  overflow: hidden;
}
.winterPunch-title-box>image{
  width: 100%;
  height: 100%;
}
.bg {
  background: #fff;
  position: relative;
  margin-top: 30rpx;
}
.textarea-wrp {
  padding: 0 20rpx;
  background-color: #fff;
  position: relative;
  box-shadow: 0 0rpx 6px #00000020;
}

.textarea-wrp textarea {
    width: 100%;
    padding: 25rpx 0;
    min-height: 110rpx;
    max-height: 500rpx;
    height: 110rpx;
    font-size: 28rpx;
    position: relative;
    z-index: 1;
}
.photo-box {
  padding: 25rpx 15rpx 15rpx;
  font-size: 0;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  margin-top: 20rpx;
}
.add-pic {
  width: 210rpx;
  height: 210rpx;
  position: relative;
  border-radius: 12rpx;
  background: #e0e0e0;
  display: flex;
  align-items: center;
  justify-content: center;
}
view.add-pic image {
  width: 84rpx;
  height: 84rpx;
}
.photo {
  width: 215rpx;
  height: 215rpx;
  box-sizing: border-box;
  font-size: 0;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  background: #fafbfc;
  overflow: hidden;
}
.photo image {
  width: 100%;
  height: 100%;
}
.acitiv_1 {
  padding: 12rpx 10rpx;
  font-size: 28rpx;
  color: #206ed3;
  display: flex;
  align-items: center;
}
.acitiv_1>image{
  width: 34rpx;
}
.btn-send {
  padding: 60rpx 40rpx;
  width: 100%;
  background: #fff;
  box-sizing: border-box;
}
.btn-send button {
  width: 266rpx;
  height: 78rpx;
  background: #206ed3;
  border-radius: 20px;
  line-height: 78rpx;
  font-size: 30rpx;
  padding: 0;
  color: #fff;
  box-shadow: 0 6px 5px #80c3f3;
}
.hover_color{
  opacity: 0.8;
}