page{
  padding: 30rpx 0;
  box-sizing: border-box;
}
.list-box{
  margin: 0 24rpx;
  background: #fff;
}
.winterPunch-title-box{
  height: auto;
  overflow: hidden;
}
.winterPunch-title-box>image {
  width: 100%;
  height: 100%;
}

.circle-box {
  margin-top: 12rpx;
}
.circle-box1 {
  background: #fff;
  margin: 20rpx 0;
  box-sizing: border-box;
  font-size: 32rpx;
  border-bottom: 2rpx solid #F2F2F2;
}
.circle-head {
  display: flex;
  align-items: center;
  position: relative;
}
.circle-head>button{
  margin: 0;
  line-height: 1;
}
.circle-head .photo {
  background: #fff;
  box-shadow: 0 2px 4px #0000000a, 2px 0 4px #0000000a;
  border-radius: 8rpx;
  width: 82rpx;
  height: 82rpx;
  overflow: hidden;
  margin-right: 20rpx;
}
.name_box {
  display: flex;
  align-items: flex-end;
}
.circle-head .time {
  display: flex;
  align-items: center;
  font-size: 22rpx;
  color: #aaa;
  line-height: initial;
}
.circle-head .name {
  font-size: 32rpx;
  color: #000;
  width: auto;
  margin-right: 8rpx;
}
.circle-footer-operation {
  padding: 10rpx !important;
  margin-top: 6rpx;
  height: 44rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  position: relative;
}
.circle-jottings{
  box-sizing: border-box;
}
.circle-jottings text {
  font-size: 30rpx;
}
.circle-img {
  margin-top: 10rpx;
  margin-bottom: 18rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: stretch;
}
.imgyi-width {
  width: 380rpx;
  margin-top: 10rpx;
  vertical-align: top;
}
.imgduo-width {
  width: 227rpx;
  height: 227rpx;
  margin-top: 10rpx;
  margin-right: 10rpx;
  box-sizing: border-box;
  vertical-align: top;
}
.circle-footer-operation .item-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  height: auto;
}
.circle-footer-operation .item-btn button {
  width: 44rpx;
  height: 44rpx;
  margin: 0;
  position: relative;
  overflow: visible;
}
.circle-footer-operation .item-btn button image {
  width: 42rpx;
  height: 42rpx;
  position: absolute;
  top: 0;
  left: 0;
}
.circle-footer-operation .item-btn text {
  font-size: 26rpx;
  color: #aaa;
  padding-left: 10rpx;
}
.swiper-shop {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #000;
  z-index: 9999;
}
.swiper-shop swiper {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
}
.swiper-shop image {
  width: 100%;
  height: 100%;
}
.acitiv_1 {
  padding: 12rpx 10rpx;
  font-size: 28rpx;
  color: #206ed3;
  display: flex;
  align-items: center;
}
.acitiv_1>image {
  width: 34rpx;
}
.full_txt {
  font-size: 32rpx;
  color: #4285f4;
  margin-top: 10rpx;
  text-align: right;
  box-sizing: border-box;
  padding-right: 10px;
}
.circle-jottings text.cool {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 4;
  -webkit-box-orient: vertical;
}
.movable-view {
  bottom: 140rpx;
  border-radius: 50%;
  background: #FF6052;
  width: 90rpx;
  height: 90rpx;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}
.movable-view image, .movable-view2 image{
  width: 54rpx;
  height: 42rpx;
}
