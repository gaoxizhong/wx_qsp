page{
  background: #fff;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}
.books-title{
  font-weight: bold;
  font-size: 32rpx;
  padding: 15rpx 0;
}
.books-name-box{
  margin: 15rpx 0;
  width: 100%;
  height: 86rpx;
  line-height: 86rpx;
  font-size: 30rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  border-radius: 6px;
  background: #f6f6f6;
}
.books-name-box>input{
  width: 100%;
  height: 100%;
}
.xytext-box{
  font-size: 30rpx;
  color: #ff0000;
  padding: 20rpx 0;
}
.infoPlate-box {
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  padding: 40rpx 0;
  margin-top: 40rpx;
}
.infoPlate-Push-box {
  width: 442rpx;
  height: 112rpx;
  position: relative;
}
.infoPlate-Push-box>image {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  right: 0;
}
.infoPlate-text {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  font-size: 32rpx;
  padding-top: 24rpx;
  box-sizing: border-box;
  font-weight: 600;
  color: #fff;
  text-align: center;
}
.hoverClass{
  opacity: 0.8;
}