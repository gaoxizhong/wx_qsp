.img-box{
  box-sizing: border-box;
}
.img-box image{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
}
.notice-box{
  width: auto;
  padding: 10rpx 30rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #666;
  margin: 150rpx 30rpx;
  box-sizing: border-box;
  display: inline-block;
  background: #fff;
  border-radius: 20px;
  box-shadow: 0 2px 6px #c5c5c599;
}
.notice-box>view{
  padding: 6rpx 0;
  color: #333;
}