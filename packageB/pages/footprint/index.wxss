page {
  background: #f2f2f2;
}
.popularActivity-box {
  width: auto;
  margin: 30rpx 20rpx;
  border-radius: 8px;
  box-sizing: border-box;
}
.popularActivity-list-box {
  width: 100%;
  box-sizing: border-box;
}
.popularActivity-list-box>view {
  width: 100%;
  position: relative;
  display: flex;
  align-items: center;
  margin-top: 30rpx;
  background: #fff;
  padding: 20rpx;
  box-sizing: border-box;
  border-radius: 8px;
}
.index-list-img {
  width: 117rpx;
  height: 112rpx;
}

.popularActivity-list-titletext {
  flex: 1;
  padding-left: 20rpx;
  font-size: 30rpx;
}
.my-more {
  width: 48rpx;
}
.list-snbtext {
  color: #999;
  font-size: 12px;
  margin-top: 10rpx;
}