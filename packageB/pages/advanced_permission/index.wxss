.ad-perm-box{
  width: 100%;
  height: 344rpx;
  box-sizing: border-box;
  position: relative;
}
.ad-perm-box>image{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
}
.box-items{
  height: 200rpx;
  margin: 40rpx 30rpx;
  border-radius: 6px;
  box-shadow: 0 1px 4px #d6d8d7;
  background: #fff;
  box-sizing: border-box;
  padding: 0 50rpx;
  display: flex;
  align-items: center;
}
.authorize-box{
  margin-top: -80rpx;
  line-height: 1.2;
}
.box-items>image{
  width: 80rpx;
}
.box-items-t{
  flex: 1;
  padding-left: 20rpx;
  box-sizing: border-box;
  text-align: left;
}
.box-items-title{
  font-size: 32rpx;
  font-weight: 600;
  position: relative;
}
.box-items-title>text{
  padding-bottom: 4rpx;
}
.box-items-text{
  font-size: 28rpx;
  margin-top: 18rpx;
}
.box-items-title-1{
  border-bottom: 4px solid #ffb46a;
}
.box-items-title-2{
  border-bottom: 4px solid #fd8a98;
}
.box-items-title-3{
  border-bottom: 4px solid #feb916;
}
.box-items-title-4{
  border-bottom: 4px solid #ff5911;
}
