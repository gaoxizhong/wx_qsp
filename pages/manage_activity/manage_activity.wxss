page {
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  background-color: #64B532;
  padding: 24rpx 24rpx 0;
  box-sizing: border-box;
}

.manage-activity {
  height: 80rpx;
  font-size: 32rpx;
  color: #fff;
  line-height: 80rpx;
  text-align: right;
}
.activity-list {
  margin-bottom: 98rpx;
}
.activity-list .item {
  margin-bottom: 16rpx;
  padding: 16rpx 12rpx;
  border-radius: 8rpx;
  background-color: #fff;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
}
.activity-list .item .checkbtn {
  width: 40rpx;
  height: 40rpx;
  margin-top: 6rpx;
  border-radius: 50%;
  border: 2rpx solid #999;
  box-sizing: border-box;
  position: relative;
}
.activity-list .item .checkbtn image {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}
.activity-list .item .activity-info {
  flex: 1;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  flex-direction: column;
}
.activity-list .activity-info .activity-title {
  width: 100%;
  margin-bottom: 12rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.activity-list .activity-info .activity-title text:first-child {
  font-size: 40rpx;
  color: #333;
}
.activity-list .activity-info .activity-title text:last-child {
  font-size: 26rpx;
  color: #999;
}
.activity-list .activity-desc {
  margin-bottom: 12rpx;
  font-size: 28rpx;
  color: #333;
}
.activity-list .activity-time {
  margin-bottom: 12rpx;
  font-size: 28rpx;
  color: #333;
}
.activity-list .activity-price {
  margin-bottom: 12rpx;
  font-size: 28rpx;
  color: #333;
}
.activity-list .activity-describe {
  font-size: 28rpx;
  color: #333;
}
.activity-list .activity-describe button{
  width: 45%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  /* margin-left: 20rpx; */
  color:#fff;
}
.manage-btn {
  width: 100%;
  height: 98rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  position: fixed;
  bottom: 0;
  left: 0;
  background-color: #fff;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.manage-btn .button {
  color: #fff;
  height: 60rpx;
  line-height: 60rpx;
  width: 120rpx;
  font-size: 32rpx;
  text-align: center;
  border-radius: 12rpx;
}



