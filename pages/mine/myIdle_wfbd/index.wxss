page{
  background: #f5f7f6;
  overflow: hidden;
}
.page-box{
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
}
.page-box-top{
  width: 100%;
  height: 520rpx;
}
.myitem-listbox{
  flex: 1;
  width: 100%;
}
.fbxz-box{
  width: 100%;
  background: #fff;
  height: 402rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.fbxz-box>image{
  width: 324rpx;
  height: 344rpx;
}
.fbxzlist-box{
  width: 100%;
  margin-top: 20rpx;
  background: #fff;
  padding: 0 20rpx;
  box-sizing: border-box;
}
/* ================================ 列表样式 以下 =========================================== */
.tab-bar {
  height: 98rpx;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  background: #fff;
}
.tab-bar .tab-bar-item {
  width: 20%;
  height: 100%;
  line-height: 98rpx;
  text-align: center;
  position: relative;
  color: #878787;
  margin: 0 10rpx;
}
.tab-barhover{
  color: #000;
  font-weight: 600;
}
.tab-bar .tab-bar-item .bar-border {
  width: 50rpx;
  height: 10rpx;
  border-radius: 4rpx;
  position: absolute;
  left: 50%;
  bottom: 0;
  transform: translateX(-50%);
  background: #ff905f;
}
.myitem-listbox-scroll-view{
  width: 100%;
  padding-bottom: 124rpx;
  box-sizing: border-box;
}
.scroll-view-box{
  padding: 10rpx 15rpx;
  box-sizing: border-box;
}
.scroll-view-item{
  height: 284rpx;
  width: 100%;
  padding: 20rpx 15rpx;
  box-sizing: border-box;
  background: #fff;
  margin: 15rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.scroll-view-item-top{
  height: 150rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}
.shop-img {
  width: 148rpx;
  height: 148rpx;
  border-radius: 8px;
  overflow: hidden;
}
.shop-img .shop-img-width {
  width: 100%;
  height: 100%;
}
.shop-jottings {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
  padding-left: 20rpx;
  overflow: hidden;
  height: 100%;
}
.shop-jottings .text {
  font-size: 28rpx;
  height: auto;
  overflow: hidden;
}
.shop-jottings .text, .shop-jottings .text {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.time {
  padding-right: 16rpx;
  display: flex;
  align-items: center;
  font-size: 22rpx;
  color: #aaa;
  line-height: initial;
}
.discount {
  padding-right: 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  margin-top: 12rpx;
}
.discount-price {
  color: #D55B06;
}
.scroll-view-item-bott{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  font-size: 26rpx;
}
.view-item-more{
  padding: 4rpx 20rpx;
  color: #878787;
}
.bj-fx-box{
  display: flex;
  align-items: center;
}
.bj-fx-box>.bj-fx-item{
  margin: 0 15rpx;
  padding: 4rpx 20rpx;
  box-sizing: border-box;
  border: 1px solid #333;
  border-radius: 20px;
  line-height: 1.3;
  font-size: 24rpx;
}
.pop-add{
  height: auto;
}
.pop-add view.itemm {
  flex: 1;
  display: flex;
  width: 100%;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
  border-bottom: 2rpx solid rgb(223, 223, 223);
}
.pop-add view.itemm form {
  width: 100%;
}
.pop-add {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: auto;
  background: #fff;
  font-size: 30rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 99999;
  border-radius: 20rpx 20rpx 0 0;
}