.details{
  width: 100%;
  height: auto;
  box-sizing: border-box;
  padding: 18rpx 36rpx 24rpx 36rpx;
  position: fixed;
  top: 0;
  left: 0;
  background-color: #fff;
  margin-bottom: 26rpx;
  overflow: hidden;
  z-index: 9999;
}
.details-box{
width: 100%;
height: 72rpx;
display: flex;
justify-content: space-between;
align-items: center;
}
.order-item {
height: 132rpx;
padding:20rpx 36rpx;
border-bottom: 2rpx solid #f4f4f4;
display: flex;
justify-content: flex-start;
align-items: center;
}
.order-item image {
width: 61rpx;
height: 61rpx;
border-radius: 50%;
margin-right: 22rpx;
}
.order-item .order-info text {
display: block;
}
.order-item .order-info .name {
font-size: 30rpx;
color: #333;
}

.order-item .order-info .time {
font-size: 26rpx;
color: #999;
width: 470rpx;
display: -webkit-box;
-webkit-line-clamp: 2;
overflow: hidden;
text-overflow: ellipsis;
-webkit-box-orient: vertical;
word-break: break-all;
}
.order-item .hbb {
flex: 1;
font-size: 32rpx;
text-align: right;
}

.desc-info {
width: 100%;
height: 1px;
color: #9C9A9A;
font-size: 28rpx;
position: fixed;
top: 70%;
right: 0;
}
movable-view {
display: inline-block;
width: 10px;
height: 10px;
top: 0px;
left: 0px;
position: absolute;
}
.pop_music {
bottom: -120rpx;
}

