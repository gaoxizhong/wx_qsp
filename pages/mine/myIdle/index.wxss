@import "/assets/css/myIdleHead.wxss";
.page {
  padding: 10rpx 28rpx 30rpx 28rpx;
  box-sizing: border-box;
  background: #fff;
  margin: 0 20rpx;
  margin-top: 30rpx;
  border-radius: 6px;
}
.idle-release{
  width: 170rpx;
  height: 54rpx;
  border-radius: 8px;
  background: #fd783c;
  border: 2rpx solid #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 30rpx;
  padding: 0 14rpx;
}

.retweet{
  width: 90rpx;
  flex: none;
}
.editstatus{
  display: flex;
  justify-content: flex-end;
  align-items: center;
  font-size: 25rpx;
  flex: 1;
  padding: 0 20rpx;
}
.idleList-box-item{
  padding: 10rpx 0;
}
.editstatus .editstatus-item.qu{
  background:#D55B06;
  color: #fff;
}
.circle-footer-operation .editstatus .editstatus-item button{
  width: 100%;
  height: 100%;
  font-size: 26rpx;
  padding: 2rpx 0;
  margin: 0;
  line-height: 1;
}
.pop-add{
  height: auto;
}
.pop-add view.itemm {
  flex: 1;
  display: flex;
  width: 100%;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
  border-bottom: 2rpx solid rgb(223, 223, 223);
}
.pop-add view.itemm form {
  width: 100%;
}

.discount-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 134rpx;
  height: 50rpx;
  color: #fff;
  font-size: 22rpx;
  background-image: linear-gradient(to right,#fe7e16, #eb4700);
  border-radius: 18px;
  line-height: 50rpx;
  position: absolute;
  right: 20rpx;
  bottom: 0;
  padding-bottom: 4rpx;
  z-index: 100;
}
.retweet-2{
  flex: 1;
  position: absolute;
  right: 12rpx;
  top: 4rpx;
  width: auto;
  height: 46rpx;
}
.popups{
  width: 80%;
  height: auto;
  background: #fff;
  z-index: 9999;
  position: fixed;
  top: 50%;
  transform: translateY(-50%);
  margin-left: 10%;
  border-radius: 30rpx;
  padding: 40rpx 40rpx 0 40rpx;
  box-sizing: border-box;

}
.popups .sale_img{
  width: 180rpx;
  height: 170rpx;
  overflow: hidden;
  margin: 10rpx auto;
  border: 1px solid red;
}

.popups .sale_img image{
  width: 100%;
  height: 100%;
}

.popups .sales_price{
  text-align: center;
  color: #CD0909;
  font-size: 32rpx;
}
.popups .sales_title{
  color: #030303;
  font-size: 26rpx;
  padding: 8rpx 42rpx;
  overflow: hidden;
  text-overflow: -o-ellipsis-lastline;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  text-align: center;
}
.addwx-wrapp{
  padding: 14rpx 0;
  text-align: center;
  width: 100%;
  margin: 0 auto;
}
.addwx-wrapp input{
  padding: 8rpx 10rpx;
  margin: 14rpx auto;
  text-align: center;
  color:#030303;
  font-size: 26rpx;
  width: 80%;
  background: #e4e4e4;
}
.sales_radio{
  margin: 18rpx auto;
  width: auto;
}
.sales_radio radio-group{
  line-height: 1;
  padding-bottom: 4rpx;
}
.sales_radio radio-group radio{
  transform:scale(0.7);
}
.addwx-wrapp .send-btn {
  background: #D55B06;
  border-radius: 8rpx;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 28rpx;
  color: #fff;
  display: block;
  padding: 0 34rpx;
  margin: 32rpx 0;
}


.pop-add {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: auto;
  background: #fff;
  font-size: 30rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 99999;
  border-radius: 20rpx 20rpx 0 0;
}
.myidle-box-title {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 10rpx 0;
}
.myidle-title-l {
  display: flex;
  align-items: center;
}
.myidle-title-l-b {
  width: 16rpx;
  height: 46rpx;
  border-radius: 6px;
  background: linear-gradient(to bottom,#fd8002,#feba2d);
}
.myidle-title-l text {
  padding-left: 14rpx;
  font-size: 32rpx;
  font-weight: 600;
}
.shou-tu{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 10;
  opacity: 0.4;
  background: #383838;
  transform: translate(0,0);
}
.shou-tu image{
  width: 200rpx;
  height: 160rpx;
  overflow: hidden;
}
