page {
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  background-color: #fff;
}
.shopinfo {
  height: 300rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  background-color: #64B532;
}
.shopinfo image {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  margin-bottom: 16rpx;
}
.shopinfo text {
  font-weight: 32rpx;
  color: #fff;
}
.func-btns {
  height: 180rpx;
  background-color: #fff;
  color: #333;
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
}
.divide {
  height: 20rpx;
  background-color: #eee;
}
.func-btns view {
  width: 33.33%;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.func-btns view image {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 12rpx;
}
.func-btns .create-active::after {
  content: '';
  display: block;
  height: 140rpx;
  width: 4rpx;
  background-color: #eee;
  position: absolute;
  top: 50%;
  right: 0;
  transform: translateY(-50%);
}
.func-btns .publish-cicle::after {
  content: '';
  display: block;
  height: 140rpx;
  width: 4rpx;
  background-color: #eee;
  position: absolute;
  top: 50%;
  right: 0;
  transform: translateY(-50%);
}
.func-btns .share-shop {
  position: relative;
}
.func-btns .share-shop button {
  width: 100%;
  height: 100%;
  opacity: 0;
  position: absolute;
  top: 0;
  left: 0;
  margin: 0;
}
.order-list {
  padding: 36rpx 24rpx;
  background-color: #fff;
}
.order-list view {
  padding: 24rpx;
  border-bottom: 4rpx solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.order-list view image {
  width: 16rpx;
  height: 28rpx;
}
.order-list view text {
  font-size: 32rpx;
  color: #333;
}