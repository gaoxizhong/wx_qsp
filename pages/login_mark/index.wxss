page{
  padding: 0 54rpx;
  box-sizing: border-box
}
.infotitle-box{
  width: 100%;
  padding-top: 40rpx;
  box-sizing: border-box;
  font-size: 66rpx;
  font-weight: bold;
  text-align: center;
  color: #000;
}
.userUrl-view{
  width: 100%;
  padding: 75rpx 0 45rpx 0;
  position: relative;
}
.userUrl-view::before{
  content: '';
  width: 100%;
  height: 1px;
  transform: scaleY(0.5);
  position: absolute;
  left: 0;
  bottom: 0;
  background-color: #aaa;
}
.userUrl-img-box{
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto;
  box-shadow: 0 0 10px 2px #00000020;
  border-radius: 50%;
  overflow: hidden;
}
.info-box{
  padding: 62rpx 0;
}
.info-text-1{
  font-size: 36rpx;
  color: #666;
}
.info-text-2{
  padding-top: 45rpx;
  font-size: 30rpx;
  color: #888888;
}
.footer-btn-box{
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
.footer-btn-box>button{
  width: 90%;
  height: 90rpx;
  line-height:90rpx;
  border-radius: 20px;
  font-size:30rpx;
  text-align: center;
  color: #fff;
  margin: 20rpx 0;
}
.getUserProfile-btn{
  background:#29c572;
}
button.cancelLogin-btn{
  background: #dfdfdf;
}
.hoverClass{
  opacity: 0.8;
}