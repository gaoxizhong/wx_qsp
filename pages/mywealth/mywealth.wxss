page {
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  background-color: #F8F8F8;
}
.item-content {
  font-size: 32rpx;
  color: #333;
  margin: 0 24rpx;
  margin-top: 24rpx;
}
.userinfo {
  padding-left: 30rpx;
  margin-bottom: 24rpx;
  border-radius: 8rpx;
  background-color: #fff;
  box-sizing: border-box;
  display:flex;
  justify-content:center;
  flex-direction:column;
}
.userinfo text {
  width: 162rpx;
  margin-right: 76rpx;
  font-size: 32rpx;
  color: #333333;
}
.userinfo .userid {
  margin-top:40rpx;
  margin-bottom:20rpx;
  display:flex;
  justify-content:flex-start;
  align-items:center;
}
.userinfo .username {
  display:flex;
  justify-content:flex-start;
  align-items:center;
  margin-bottom:20rpx;
}
.userhbb-info {
  padding-left: 30rpx;
  border-radius:8rpx;
  background-color: #fff;
  display:flex;
  justify-content:center;
  flex-direction:column;
}
.account-type {
  display:flex;
  justify-content:flex-start;
  align-items:center;
  margin-bottom:20rpx;
}
.account-type>view{
  width: auto;
  height: auto;
  margin-right: 30rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  padding: 12rpx 22rpx;
  text-align: center;
  border: 1rpx solid #E8E8E8;
  background: #fff;
  border-radius: 20px;
}
.account-type>view.active{
  color: #fff;
  background-image: linear-gradient(to right, #4AC081 , #6cd67f);
}
.userhbb-info.userhbb-info-box{
  padding: 20rpx;
  box-sizing: border-box;
  margin-top: 30rpx;
}
.orderList-title{
  font-size: 30rpx;
  display: flex;
  align-items: center;
  padding: 10rpx 0;
  justify-content: space-between;
}
.orderList-title .my-more {
  width: 36rpx;
}
.userhbb-info .account-num {
  /* display:flex; */
  justify-content:flex-start;
  align-items:center;
  margin-top:20rpx;
  margin-bottom:40rpx;
  padding-right: 20rpx;
}
.userhbb-info .account-num .input-user{
  flex: 1;
  padding-left: 10rpx;
  margin-top: 30rpx;
}
.userhbb-info .account-num .input-user input{
  padding: 6rpx 20rpx;
  border: 1rpx solid #E8E8E8;
}
.userhbb-info .order-remark {
  margin: 20rpx 0;
  width:642rpx;
  height:90rpx;
  background:#FDFDFD;
  border-radius:6rpx;
  border:1rpx solid #E8E8E8;
  padding: 12rpx 36rpx;
  font-size: 32rpx;
  display: block;
  box-sizing: border-box;
}
.userhbb-info .order-remark textarea {
  width: 100%;
  height: 100%;
}
.confirm-pay {
  width:75%;
  height:80rpx;
  line-height: 80rpx;
  font-size: 36rpx;
  color: #fff;
  background-image: linear-gradient(to right, #4AC081 , #6cd67f);
  border-radius:40rpx;
  position: fixed;
  left: 50%;
  bottom: 40rpx;
  transform: translateX(-50%);
}
.scan_button {
  margin: 40rpx auto;
  width:180rpx;
  height:60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  color: #fff;
  background:#64B532;
  border-radius:40rpx;
}
.gohome {
  bottom: 20rpx;
  z-index: 2;
}


.order-list .order-item {
  height: 132rpx;
  padding-right: 29rpx;
  border-bottom: 2rpx solid #f4f4f4;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  width: 100%;
}
.order-list .order-item image {
  width: 61rpx;
  height: 61rpx;
  border-radius: 50%;
  margin-right: 22rpx;
}
.order-list .order-item .order-info {
  flex: 1;
}
.order-list .order-item .order-info text.time {
  display: flex;
  align-items: center;
}
.order-list .order-item .order-info .name {
  font-size: 30rpx;
  color: #333;
}
.order-list .order-item .order-info .time {
  font-size: 26rpx;
  color: #999;
  width: 470rpx;
  display:-webkit-box;
  -webkit-line-clamp:1;
  overflow:hidden;
  text-overflow:ellipsis;
  -webkit-box-orient:vertical;
  word-break:break-all;
}
.order-list .order-item .hbb {
  flex: 1;
  font-size: 32rpx;
  text-align: right;
  padding: 10rpx;
}

.order-list {
  width: 96%;
  margin: 0 auto;
  box-sizing: border-box;
  background-color: #fff;
  font-size: 24rpx;
  z-index: 100;

}
.order-list .order-content {
  border: 1rpx solid #e5e5e5;
  border-radius: 8rpx;
  height: 243rpx;
  padding: 0 24rpx;
  margin-bottom: 10rpx;
}
.order-list .order-content .order-item-hd {
  /* padding: 0 24rpx; */
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #e5e5e5;
  height: 60rpx;
}
.order-list .order-content .order-item-detail {
  box-sizing: border-box;
  width: 100%;
  /* padding: 0 24rpx; */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
}
.order-list .order-content .order-item-detail text {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
}