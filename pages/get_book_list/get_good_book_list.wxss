
.pages-box{
  display: flex;
  flex-wrap: wrap;
  padding: 16rpx;
}
.booklist-items{
  width: 50%;
  padding: 16rpx;
  display: flex;
  box-sizing: border-box;
}
.list-items-box{
  flex: 1;
  position: relative;
  height: auto;
}
.list-items-box image{
  width: 100%;
  height: 406rpx;
  border-radius: 6px;
  display: block; 
}
.box-items-text{
  position: absolute;
  left: 0;
  bottom: 0;
  background: #000;
  opacity: 0.6;
  color: #fff;
  width: 100%;
  padding: 10rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  border-bottom-left-radius: 6px;
  border-bottom-right-radius: 6px;
}