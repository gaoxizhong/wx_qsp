/* pages/publish/publish.wxss */
.huishou {
  bottom: 40rpx;
}
page{
  box-sizing: border-box;
}
.bg {
  background: #fff;
  /* margin-bottom: 120rpx; */
  position: relative;
  padding: 30rpx;
  box-sizing: border-box;
}

.checkbox {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
  margin-left: 44rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 10rpx 0 #00000012;
}

.textarea-wrp {
  padding: 0 30rpx;
  background-color: #fff;
  position: relative;
  box-shadow: 0 2rpx 20rpx 2px #00000020;
  /* z-index: 1; */
}

.textarea-wrp textarea {
  width: 100%;
  padding: 25rpx 0;
  min-height: 200rpx;
  max-height: 500rpx;
  height:160rpx;
  font-size: 28rpx;
  position: relative;
  z-index: 1;
}

.photo-box {
  padding: 25rpx 15rpx 15rpx;
  font-size: 0;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  margin-top: 60rpx;
}

.photo {
  width: 215rpx;
  height: 215rpx;
  box-sizing: border-box;
  font-size: 0;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  background: #fafbfc;
  overflow: hidden;
}

.photo image {
  width: 100%;
  height: 100%;
}

.photo:nth-child(3n) {
  margin-right: 0;
}
.add-pic{
  width: 124rpx;
  height: 124rpx;
  position: relative;
  border: 2rpx solid #999;
  border-radius: 12rpx;
  background: #d1d1d1;
}
view.add-pic image {
  width: 84rpx;
  height: 84rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
}
  

.pos-send {
  display: flex;
  justify-content: center;
  /* bottom: 20rpx;
  position: fixed; */
  /* width: 80%; */
}

.pos {
  padding: 0 25rpx;
  display: flex;
  align-items: center;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
  background: #f3f5f8;
}

.pos image {
  width: 18rpx;
}

.pos text {
  font-size: 28rpx;
  margin-left: 10rpx;
}

.btn-send {
  width: 100%;
  background: #fff;
  padding: 20rpx 34rpx;
  /* position: fixed;
  left: 50%;
  bottom: 0;
  transform: translateX(-50%); */
  box-sizing: border-box;
  
}

.btn-send button {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 20px;
  border: none;
  background-image: linear-gradient(to right, #2eae84 , #6cd67f);
}

.likes-box {
  padding: 30rpx 30rpx 0rpx;
}

.likes-box view {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
}

.likes-box checkbox-group {
  display: flex;
  flex-wrap: wrap;
  padding-bottom: 50rpx;
  border-bottom: 1px solid #dfdfdf;
}

.likes-box checkbox-group label {
  width: 50%;
  font-size: 0;
  margin-top: 20rpx;
  box-sizing: border-box;
  display: flex;
}

.likes-box checkbox-group label text {
  font-size: 28rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin-left: 10rpx;
}

.likes-box checkbox-group label checkbox {
  box-sizing: border-box;
}
.gohome {
  bottom: 60rpx;
}
.huishou {
  bottom: 320rpx;
}
.activity-list {
  padding: 36rpx 24rpx;
  background-color: #fff;
}
.activity-list view {
  padding: 24rpx;
  border-bottom: 4rpx solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.activity-list view image {
  width: 16rpx;
  height: 28rpx;
}
.activity-list view text {
  font-size: 32rpx;
  color: #333;
}
.share_type{
  display: flex;
  border: 1px solid #ccc;
  width: 90%;
  margin-left: 5%;
  border-radius: 15rpx;
  font-size: 32rpx;
  margin-bottom: 20rpx;
  box-shadow: 10rpx 10rpx 5rpx #888888;
}
.share_type .text{
  width: 60%;
  padding: 32rpx;
}
.share_type .text text{
  width: 100%;
  display: block;
}
.share_type .but{
  width: 40%;
  padding: 40rpx;
}
.share_type .but button{
  font-size: 32rpx;
  background-image: linear-gradient(to right, #4AC081 , #6cd67f);
  color: white;
  border-radius: 50rpx;
}
.shareDesc{
  display: flex;
  margin-bottom: 20rpx;
  margin-left: 30rpx;
  font-size: 32rpx;
}
.shareDesc image{
  width: 6%;
  height: 46rpx;
  vertical-align: middle;
  padding-right: 10rpx;
}
.shareDesc text{
  width: 90%;
  vertical-align: middle;
  color: #888;
}

.modal-hide {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: -180rpx 105rpx;
  border-radius: 36rpx;
}

.modal-title {
  padding-top: 50rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}

.modal-content {
  padding: 50rpx 32rpx;
}

.modal-input {
  display: flex;
  /* background: #fff;
  border: 2rpx solid #ddd; */
  border-radius: 4rpx;
  font-size: 28rpx;
}


.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}

.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}

.btn-confirm {
  width: 100%;
  color: #ec5300;
  text-align: center;
  font-size: 36rpx;
  background: #f9f9f9;
}
.shareDesc button{
  color: white;
  font-size: 32rpx;
  padding: 5rpx;
  width: 40%;
  background: #ccc;
}
.btn-send-1{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  background: #4ac280;
  color: #fff;
}
.btn-send-1 button{
  color: #fff;
}
.acitiv_1{
  padding: 12rpx 10rpx;
  font-size: 28rpx;
}
.canvas-compress{
  position: fixed;
  left: 0;
  top: 10000px;
}
