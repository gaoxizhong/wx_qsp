  text-align: center;
  font-size: 30rpx;
  color: #fff;
  border-radius: 20px;
  background-image: linear-gradient(to right, #ff6d00 , #ffad00);
  margin: 0 auto;
  font-weight: 600;
  box-shadow: 0 5px 4px #cdc197;
  animation: scaleDraw ease-in-out infinite 5s;
  position: absolute;
  left: 0;
  right: 0;
  z-index: 100;
}
@keyframes scaleDraw { 
  0%{
      transform: scale(1);  /*开始为原始大小*/
  }
  25%{
      transform: scale(1.1); /*放大1.1倍*/
  }
  50%{
      transform: scale(1);
  }
  75%{
      transform: scale(1.1);
  }
}

