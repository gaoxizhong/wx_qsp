page {
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  background-color: #F8F8F8;
}
.circle-info {
  padding: 32rpx 24rpx 48rpx;
  margin-bottom: 22rpx;
  background-color: #fff;
}
.circle-info .person-info {
  margin-bottom: 40rpx;
}
.circle-info .person-info .lt {
  flex: 1;
}
.circle-info .person-info .lt .head-pic {
  width: 94rpx;
  height: 94rpx;
  border-radius: 50%;
  margin-right: 12rpx;
}
.circle-info .person-info .lt .name {
  font-size: 32rpx;
  color: #333;
}
.circle-info .person-info .lt .name image {
  width: 24rpx;
  height: 24rpx;
}
.circle-info .person-info .lt .time {
  font-size: 24rpx;
  color: #999;
}
.circle-info .person-info .rt {
  width: 222rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.circle-info .person-info .rt button {
  margin: 0;
  width:107rpx;
  height:48rpx;
  line-height: 48rpx;
  font-size: 24rpx;
  color: #64B532;
  border-radius:25rpx;
  border:2rpx solid #64B532;
  margin-left: 8rpx;
}
.circle-jottings {
  font-size: 34rpx;
  color: #333;
}

.full_txt {
  font-size: 32rpx;
  color: #64B532;
  margin-top: 10rpx;
}

.circle-jottings text.cool {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 6;
  -webkit-box-orient: vertical;
}

.circle-img {
  margin-top: 10rpx;
  margin-bottom: 38rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: stretch;
}

.circle-comment {
  padding: 20rpx;
  background: #ffffff;
}
.circle-comment .title {
  color: #333;
  font-size: 34rpx;
}
.circle-comment .item {
  color: #64B532;
  font-size: 32rpx;
  margin: 8rpx 0;
  text-align: left;
  line-height: initial;
}

.circle-comment .txt text {
  color: #4d4d4d;
}
.comment-item {
  padding: 38rpx 40rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #F2F2F2;
}
.comment-list .comment-item:last-child {
  border-bottom: none;
}
.comment-item .title {
  font-size: 32rpx;
  color: #333;
}
.comment-item .title .time {
  font-size: 24rpx;
  color: #999;
}
.comment-item .title .commen-people {
  margin-bottom: 10rpx;
  flex: 1;
}

.comment-item .title image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}
.comment-item .comment-info {
  padding-left: 10rpx;
  font-size: 28rpx;
  color: #666;
}
.imgyi-width {
  width: 380rpx;
  margin-top: 10rpx;
  vertical-align: top;
}

.imgduo-width {
  width: 217rpx;
  height: 217rpx;
  margin-top: 10rpx;
  margin-right: 10rpx;
  box-sizing: border-box;
  vertical-align: top;
}

.imgduo-width:nth-child(3n) {
  margin-right: 0;
}
.to-comment {
  width: 100%;
  height: 98rpx;
  position: fixed;
  bottom: 0;
  padding: 20rpx 24rpx;
  background-color: #fff;
  border-top:2rpx solid #F1F1F1;
  box-sizing: border-box;
}
.to-comment .commet-box {
  width:486rpx;
  height:56rpx;
  line-height: 56rpx;
  background:#F2F2F2;
  border-radius:28rpx;
}
.to-comment .commet-box image {
  width: 30rpx;
  height: 30rpx;
  margin-left: 36rpx;
  margin-right: 14rpx;
}
.to-comment .commet-box text {
  font-size: 26rpx;
  color: #CDCDCD;
}
.to-comment .comment-btns {
  flex: 1;
  padding: 0 0 0 20rpx;
  justify-content: flex-start;
}
.to-comment .comment-btns button {
  width: 44rpx;
  height: 44rpx;
  position: relative;
  padding: 0;
  margin: 0;
  overflow: visible;
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: flex-end;
}
.to-comment .comment-btns button image {
  width: 38rpx;
  height: 38rpx;
  /* position: absolute;
  top: 0;
  left: 0; */
}
.to-comment .comment-btns button text {
  /* position: absolute;
  right: -10rpx;
  top: -25rpx; */
  font-size: 24rpx;
  color: #333;
}
.addwx-wrap {
  background: #f4f4f4;
  padding: 24rpx;
  position: fixed;
  bottom: 0;
  left: 50%;
  width: 100%;
  box-sizing: border-box;
  transform: translate(-50%, 0);
  display: flex;
  align-items: center;
  z-index: 99999;
}

.addwx-wrap > view {
  width: 100%;
  color: #939398;
}

.addwx-wrap textarea {
  font-size: 32rpx;
  padding: 35rpx 35rpx 0 35rpx;
  width: 100%;
  box-sizing: border-box;
}

.addwx-wrap .max-nums {
  border-bottom: 2rpx solid #c9c9c9;
  box-sizing: border-box;
}

.addwx-wrap .inp {
  font-size: 28rpx;
  background: #fff;
  border-radius: 8rpx;
  height: 64rpx;
  padding-left: 20rpx;
  line-height: 64rpx;
  flex: 1;
}

.addwx-wrap .send-btn {
  background: #64B532;
  border-radius: 8rpx;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 28rpx;
  color: #fff;
  display: block;
  padding: 0 34rpx;
  margin-left: 36rpx;
}

.addwx-wrap .send-btn image {
  width: 16rpx;
  vertical-align: top;
  position: relative;
  top: 50%;
  transform: translate(0, -50%);
}

.addwx-wrap .send-btn text {
  font-size: 28rpx;
  color: #999;
  margin-left: 10rpx;
  margin-right: 20rpx;
}