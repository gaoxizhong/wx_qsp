.userUrl-img-box{
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto;
}
.userUrl-img-box>button {
  width: 100%;
  height: 100%;
  position: relative;
}
.userUrl-img-box>button image.avatar{
  width: 100%;
  height: 100%;
  border-radius: 50%;
  position: relative;
  overflow: hidden;
}
.userUrl-img-box>button .xiu-img{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 6rpx;
  bottom: 4rpx;
}

.nameBox{
  width: 100%;
  display: flex;
  align-items: center;
  margin-top: 40rpx;
  padding: 30rpx 0;
  box-sizing: border-box;
  position: relative;
}
.nameBox::before{
  content: '';
  width: 100%;
  height: 1px;
  transform: scaleY(0.5);
  position: absolute;
  left: 0;
  bottom: 0;
  background-color: #aaa;
}

.nameInput-box{
  flex: 1;
  padding-left: 30rpx;
  box-sizing: border-box;
}
.nameBox-title{
  width: auto;
  display: flex;
  align-items: center;
  padding-bottom: 8rpx;
}
.info-box{
  padding: 62rpx 0;
}
.info-text-1{
  font-size: 36rpx;
  color: #666;
}
.info-text-2{
  padding-top: 45rpx;
  font-size: 30rpx;
  color: #888888;
}
.footer-btn-box{
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  padding-top: 120rpx;
}
.footer-btn-box>button{
  width: 90%;
  height: 90rpx;
  line-height:90rpx;
  border-radius: 20px;
  font-size:30rpx;
  text-align: center;
  color: #fff;
  margin: 20rpx 0;
}
.getUserProfile-btn{
  background:#29c572;
}
button.cancelLogin-btn{
  background: #dfdfdf;
}
.title-text{
  font-size: 28rpx;
  padding: 20rpx 0;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}