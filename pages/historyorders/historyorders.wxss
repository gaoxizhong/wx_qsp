page {
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
}
.search-box {
  height: 94rpx;
  padding-left: 30rpx;
  background-color: #F6F6F6;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.search-box .search-button {
  width: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.search-box .search-button text {
  margin-right: 8rpx;
  font-size: 28rpx;
  color: #333;
}
.search-box .search-button image {
  width: 20rpx;
  height: 14rpx;
}
.total-view {
  flex: 1;
  text-align: right;
  padding-right: 30rpx;
  display: flex;
  flex-direction: column;
  font-size: 24rpx;
  color: #999;
}

.order-list .order-item {
  height: 132rpx;
  padding-right: 29rpx;
  border-bottom: 2rpx solid #f4f4f4;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  width: 100%;
}
.order-list .order-item image {
  width: 61rpx;
  height: 61rpx;
  border-radius: 50%;
  margin-right: 22rpx;
}
.order-list .order-item .order-info {
  flex: 1;
}
.order-list .order-item .order-info text {
  display: block;
}
.order-list .order-item .order-info .name {
  font-size: 30rpx;
  color: #333;
}
.order-list .order-item .order-info .time {
  font-size: 26rpx;
  color: #999;
  width: 470rpx;
  display:-webkit-box;
  -webkit-line-clamp:1;
  overflow:hidden;
  text-overflow:ellipsis;
  -webkit-box-orient:vertical;
  word-break:break-all;
}
.order-list .order-item .hbb {
  flex: 1;
  font-size: 32rpx;
  text-align: right;
}
.search-condition {
  font-size: 28rpx;
  height: 200px;
  padding: 0 2%;
}
.search-condition .date-choose {
  width: 100%;
  /* height: 50px;
  display: flex;
  justify-content: center;
  align-items: center; */
}
.search-condition .start-time {
  padding-top: 76rpx;
  margin-bottom: 60rpx;
}
.search-condition .end-time {
  margin-bottom: 60rpx;
}
.search-condition .type-choose {
  width: 100%;
  height: 120px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.type-choose radio {
  margin-right: 54rpx;
  border-radius: 0;
}
.type-choose .status-radio {
  width: 100%;
  height: 40px;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-bottom: 60rpx;
}
.type-choose .type-radio {
  width: 100%;
  height: 40px;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.search-condition .btn-search {
  margin-top: 80rpx;
}
.search-condition .btn-search button {
  width:304rpx;
  height:80rpx;
  line-height: 80rpx;
  /* background:#64B532; */
  background-image: linear-gradient(to right, #2eae84 , #6cd67f);
  border-radius:40rpx;
  margin: 0 auto;
  padding: 0;
  color: #fff;
}
.order-list {
  width: 96%;
  margin: 0 auto;
  box-sizing: border-box;
  background-color: #fff;
  font-size: 24rpx;
  z-index: 100;

}
.order-list .order-content {
  border: 1rpx solid #e5e5e5;
  border-radius: 8rpx;
  height: 243rpx;
  padding: 0 24rpx;
  margin-bottom: 10rpx;
}
.order-list .order-content .order-item-hd {
  /* padding: 0 24rpx; */
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #e5e5e5;
  height: 60rpx;
}
.order-list .order-content .order-item-detail {
  box-sizing: border-box;
  width: 100%;
  /* padding: 0 24rpx; */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
}
.order-list .order-content .order-item-detail text {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
}
