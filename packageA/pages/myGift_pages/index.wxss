page{
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}

.my-title{
  width: 100%;
  font-size: 28rpx; 
  font-weight: 600;
}
.items-box{
  width: 100%;
  height: 200rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-radius: 6px;
  overflow: hidden;
  box-shadow: 0 0 6px 2px #00000020;
  margin: 20rpx 0;
}
.l-items{
  flex: 1;
  display: flex;
  align-items: center;
  height: 100%;
  padding: 20rpx 10rpx;
  box-sizing: border-box;
}
.l-items-img{
  width: 162rpx;
  height: 100%;
  padding-left: 10rpx;
}
.l-items-img image{
  width: 100%;
  height: 100%;
}
.l-items-info{
  flex: 1;
  height: 100%;
  padding-left: 10rpx;
}
.l-items-info-title{
  font-size: 30rpx;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  box-sizing: border-box;
}

.good-desc {
  color: #ff0000;
  font-size: 28rpx;
  padding: 10rpx 0;
  margin-top: 10rpx;
}
.r-items{
  width: 108rpx;
  height: 100%;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  writing-mode: vertical-rl;
  font-weight: 600;
  letter-spacing: 20rpx;
  font-size: 32rpx;
}
.is_bg{
  background: #fc8b35;
}
.no_bg{
  background: #a7a5a3;
}