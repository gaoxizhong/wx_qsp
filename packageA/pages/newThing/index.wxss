.newThing-title-box {
  width: 100%;
  height: auto;
  box-sizing: border-box;
  padding: 10rpx 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.newThing-title-box-l {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  font-weight: 600;
}
.newThing-head-logo {
  width: 50rpx;
}
.newThing-add {
  width: 60rpx;
}
.newThing-list-box{
  width: 100%;
  height: auto;
  box-sizing: border-box;
  padding: 0 15rpx;
  display: flex;
  flex-wrap: wrap;
}
.newThing-itemsList-box{
  width: 50%;
  padding: 0 15rpx;
  box-sizing: border-box;
  margin: 15rpx 0;
}
.newThing-item{
  width: 100%;
  overflow: hidden;
  box-sizing: border-box;
}
.newThing-item .newThing-img-box {
  width: 100%;
  height: 432rpx;
  border-radius: 8px;
  overflow: hidden;
  position: relative;
}
.newThing-item .newThing-img-box image.item-image{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
}
.newThing-title {
  display: flex;
  align-items: center;
  padding: 0 10rpx;
  box-sizing: border-box;
  margin-top: 10rpx;
}
.newThing-title-text{
  flex: 1;
  font-size: 30rpx;
  white-space: break-spaces;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.shanchu-icon{
  width: 60rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
}
.shanchu-icon-img{
  width: 36rpx;
  height: 38rpx;
}
.member-view{
  width: 100%;
  box-sizing: border-box;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  position: absolute;
  left: 10rpx;
  bottom: 20rpx;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.member-view-img{
  width: 42rpx;
  height: 42rpx;
  border-radius: 50%;
}
.hoverClass{
  opacity: 0.8;
}
