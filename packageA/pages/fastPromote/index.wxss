page {
  background: #f2f2f2;
  padding: 30rpx 20rpx;
  box-sizing: border-box;
}
.Barrage-box {
  width: 100%;
  height: 680rpx;
  box-sizing: border-box;
  overflow: hidden;
}
view,text,scroll-view,swiper,button,form,input,textarea,label,navigator,image {
  box-sizing: border-box;
}
.ellipsis {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.displayGroup {
  height: 100%;
  position: relative;
  overflow: hidden;
  margin: 0 -1rpx;
}
.dmGroup {
  position: absolute;
  top: 15rpx;
  left: 100%;
  z-index: 10;
  animation-timing-function: linear;
  animation-fill-mode: none;
  transform: translateZ(0);
  white-space: nowrap;
  height: 76rpx;
}
.dmGroup.top,.dmGroup.top1 {
  height: 76rpx;
}
.dmGroup.top2 {
  height: 76rpx;
  top: 135rpx;
}
.dmGroup.top3 {
  height: 76rpx;
  top: 260rpx;
}
.dmGroup.top4 {
  height: 76rpx;
  top: 380rpx;
}
.dmItem {
  display: inline-flex;
  margin-right: 60rpx;
  white-space: nowrap;
}
.dmItem .dm {
  display: inline-flex;
  vertical-align: middle;
  align-items: center;
  position: relative;
  height: 76rpx;
  line-height: 76rpx;
  padding: 0 15rpx 0 5rpx;
  background: rgba(255, 255, 255, 0.502);
  border-radius: 20px;
  overflow: hidden;
  font-size: 26rpx;
  color: #000;
  box-shadow: 0 1px 1px #00000020;
}
.dmItem .avatarBox {
  display: inline-block;
  position: relative;
  width: 64rpx;
  height: 64rpx;
  margin-right: 10rpx;
}
.dmItem .avatarBox .avatar {
  width: 64rpx;
  height: 64rpx;
  border: 0;
  border-radius: 50%;
  overflow: hidden;
}
.dmItem .dm .content {
  display: inline-block;
  max-width: 440rpx;
  height: 76rpx;
  line-height: 76rpx;
  margin-right: 10rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
@keyframes dmAnimation2{ 
  0% { transform: translateX(0); } 
  100% { transform: translateX(-100%); } 
}

@keyframes dmAnimation{
  from{ left: 100%; }
  to{ left: -100%; }
}

