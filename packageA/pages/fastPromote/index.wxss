}

.infoPlate-data-items.hover-class::before {
  content: '';
  width: 1px;
  height: 50%;
  transform: scaleX(0.5);
  -webkit-transform: scaleX(0.5);
  position: absolute;
  top: 50%;
  right: 0;
  transform: translateY(-50%);
  background: #d1d1d1;
}

.infoPlate-data-items.hover-class::after {
  content: '';
  width: 1px;
  height: 50%;
  transform: scaleX(0.5);
  -webkit-transform: scaleX(0.5);
  position: absolute;
  top: 50%;
  left: 0;
  transform: translateY(-50%);
  background: #d1d1d1;
}

