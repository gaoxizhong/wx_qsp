.location-box,
.kilometerItems-box {
  position: fixed;
  left: 50%;
  bottom: 0;
  transform: translateX(-50%);
  padding: 2rpx 30rpx;
  box-sizing: border-box;
  width: 100%;
  z-index: 100;
}

.location-box1,
.kilometerItems-box1 {
  width: 100%;
  height: auto;
  background: #fff;
  border-radius: 8px;
  box-sizing: border-box;
}

.kilometerItems-box1 {
  padding-top: 30rpx;
}

.location-nav-box {
  height: 84rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  margin: 0 20rpx;
  position: relative;
}

.location-nav-box::before {
  content: '';
  width: 100%;
  height: 1px;
  transform: scaleY(0.5);
  -webkit-transform: scaleY(0.5);
  position: absolute;
  bottom: 0;
  left: 0;
  background: #dedede;
}

.location-nav-box view.nav-items-box {
  height: 100%;
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #aaaaaa;
  font-size: 28rpx;
}

.hoverClass {
  color: #000;
}

.nav-items-box.after {
  position: relative;
}

.nav-items-box.after::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  border: 1.5px solid #000;
  box-sizing: border-box;
  width: 58rpx;
  z-index: 1;
  background-color: #000;
}

.nav-items-box>image {
  height: 32rpx;
}

.nav-items-box>text {
  padding-left: 4px;
}

.address-box {
  width: 100%;
  display: flex;
  align-items: flex-start;
  font-size: 28rpx;
