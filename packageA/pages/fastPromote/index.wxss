}

.infoPlate-data-box {
  width: 100%;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 40rpx 0;
}

.infoPlate-data-box>view.infoPlate-data-items {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  padding: 0 10rpx;
  text-align: center;
}

.infoPlate-data-items.hover-class {
