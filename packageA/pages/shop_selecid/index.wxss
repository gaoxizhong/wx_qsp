.citve-box>view {
  width: 300rpx;
}
.citve-box{
  position: fixed;
  top: 0;
  left: 0;
  z-index:9999;
}
.circle-box {
  padding: 10rpx 20rpx;
}
.commodity-items {
  position: relative;
  height: auto;
  margin: 20rpx 0;
  box-shadow: 0 0 20rpx 0 #00000015;
}
.circle {
  padding: 14rpx 40rpx;
  background: #fff;
  height: 100%;
  box-sizing: border-box;
  position: relative;
}
.shop-centent {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.shop-centent-title {
  height: auto;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: stretch;
}
.shop-img {
  width: 144rpx;
  height: 144rpx;
  overflow: hidden;
}
.shop-jottings {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: stretch;
  padding-left: 20rpx;
  overflow: hidden;
}
.shop-img .shop-img-width {
  width: 100%;
  height: 100%;
}
.shop-jottings .text, .shop-jottings .text.cool {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.shop-jottings .text {
  font-size: 28rpx;
  height: auto;
  overflow: hidden;
}
.circle-head {
  display: flex;
  align-items: center;
  position: relative;
}
.discount {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  margin-top: 12rpx;
}
.discount-price {
  color: #D55B06;
}
.commodity-items.select-items::after{
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  border: 3px solid #00b377;
  border-radius: 10px;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  -webkit-transform-origin: left top;
  transform-origin: left top;
  z-index: 999;
}
.bottom-submit-box {
  width: 100%;
  height: 102rpx;
  background: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  box-sizing: border-box;
  z-index: 999;
  padding: 0 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.bottom-submit-box>view {
  height: 70rpx;
  width: 462rpx;
  border-radius: 20px;
  background: #4ac081;
  color: #fff;
  font-size: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}