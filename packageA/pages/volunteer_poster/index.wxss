page{
  padding: 30rpx;
  box-sizing: border-box;
}
.words-box{
  box-shadow: 0 0 10px 2px #00000020;
  border-radius: 6px;
  font-size: 28rpx;
  width: 100%;
  height: auto;
  padding: 12rpx;
  box-sizing: border-box;
}
.fuze-btn-box{
  margin-top: 10rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.fuze-btn{
  width: 160rpx;
  height: 52rpx;
  background: #4ac081;
  color: #fff;
  font-size: 30rpx;
  border-radius: 20px;
  text-align: center;
  line-height: 52rpx;
}
.haibao-box{
  width: 100%;
  margin-top: 30rpx;
  box-sizing: border-box;
}
.haibao-box image{
  width: 100%;
  height: 982rpx;
}
.baocun-box{
  width: 344rpx;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  font-size: 28rpx;
  border-radius: 20px;
  background-color: #4ac081;
  color: #fff;
  margin: 50rpx auto;
}