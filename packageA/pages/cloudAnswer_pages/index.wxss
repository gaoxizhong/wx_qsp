page{
  box-sizing: border-box;
  padding: 10rpx 30rpx;
}
.anwer-title-box{
  width: 100%;
  padding: 20rpx 0;
  text-align: center;
  font-size: 36rpx;
  font-weight: 600;
  color: #4ac081;
}
.answer-list-box{
  width: 100%;
  height: auto;
  font-size: 28rpx;
}
.answer-items{
  width: 100%;
  margin: 20rpx auto;
}
.answer-options-box{
  width: 100%;
  padding: 10rpx 30rpx;
  box-sizing: border-box;
}
.options-list{
  margin: 20rpx 0;
  font-size: 28rpx;
}
.options-list radio{
  transform: scale(0.7);
}
.footer-box {
  width: 100%;
  height: 146rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  left: 0;
  bottom: 0;
}
.footer-status {
  width: 482rpx;
  height: 82rpx;
  background: #4ac081;
  color: #fff;
  line-height: 82rpx;
  text-align: center;
  border-radius: 20px;
}