}
.collec-book-add::before{
  content: '';
  width: 100%;
  height: 1px;
  position: absolute;
  bottom: 0;
  border-bottom: 1px solid #d6e4ed;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(.5);
  transform: scaleY(.5);
  -webkit-box-sizing: border-box;
  box-sizing: border-box
}
