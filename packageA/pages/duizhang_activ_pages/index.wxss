.announcement-box{
  width: 100%;
  height: auto;
  margin: 0 auto;
  box-sizing: border-box;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  background: #fff;
  padding-bottom: 10rpx;
}
.announcement-info-left{
  padding-top: 36rpx;
  width: 84rpx;
  height: 100%;
  box-sizing: border-box;
  display: flex;
  justify-content: flex-end;
  align-items: flex-start;
}
.announcement-info-left>image{
  width: 52rpx;
  height: 42rpx;
}
.announcement-info{
  flex: 1;
  height: 100%;
  box-sizing: border-box;
  overflow: hidden;
}
.scroll_box{
  height:100%;
  font-size: 26rpx;
  padding: 36rpx 20rpx 10rpx 20rpx;
  box-sizing: border-box;
  color: #666;
}
.goodinfo {
  background-color: #ececec;
  padding: 15rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-status;
  flex-wrap: wrap;
}
.title-box{
  padding: 10rpx;
}
.goodinfo .good-item {
  width: 50%;
  position: relative;
  height: auto;
  box-sizing: border-box;
  padding: 15rpx;
}
.goodinfo .good-item .good-item-view {
  width: 100%;
  height: auto;
  box-sizing: border-box;
  border-radius: 6px;
  background: #fff;
  overflow: hidden;
  position: relative;
}
.goodinfo .good-item-view image.good-item-img {
  width: 100%;
  height: 346rpx;
  justify-content: center;
  display: block;
}
.goodinfo .good-item-view .good-desc {
  font-size: 24rpx;
  display: block;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  padding: 4rpx 0;
  color: #919191;
}
.goodname-text{
  flex: 1;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  padding-left: 10rpx;
}
.goodinfo .good-item-view .goodname {
  font-size: 26rpx;
  color: #333;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  overflow: hidden;
}
.goodname-image{
  width: 60rpx;
  height: 30rpx;
}
.radio-btn{
  position: absolute;
  right: 10rpx;
  top: 10rpx;
  transform: scale(0.8);
}
.footer-box {
  width: 100%;
  height: auto;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  left: 0;
  bottom: 0;
  background: #fff;
  padding: 30rpx 0;
  box-sizing: border-box;
}
.footer-status{
  width: 482rpx;
  height: 68rpx;
  background: #4ac081;
  color: #fff;
  line-height: 68rpx;
  text-align: center;
  border-radius: 20px;
}
.xuanze-box{
  width: 100%;
  padding: 10rpx 30rpx;
  font-size: 30rpx;
}
.info-text>text {
  height: auto;
  float: left;
}