page {
  font-size: 28rpx;
  font-family: PingFangSC-Regular,PingFang SC;
  box-sizing: border-box;
  background: #fbfbfb;
}
.seach-box {
  height: 80rpx;
  padding-left: 36rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.seach-box input {
  width: 87%;
  height: 60rpx;
  padding-left: 60rpx;
  border-radius: 8rpx;
  background-color: #eee;
  color: #333;
}
.seach-box .seach-icon {
  width: 48rpx;
  height: 48rpx;
  margin-left: 14rpx;
}
.seach-box .seach-icon image {
  width: 48rpx;
  height: 48rpx;
}
.tab-bar {
  height: 98rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-size: 28rpx;
  color: #333;
  background: #fff;
}
.tab-bar .tab-bar-item {
  width: 20%;
  height: 100%;
  line-height: 98rpx;
  text-align: center;
  position: relative;
  background: #fff;
}
.tab-bar .tab-bar-item .bar-border {
  width:45rpx;
  height:8rpx;
  border-radius:4rpx;
  position: absolute;
  left: 50%;
  bottom: 0;
  transform: translateX(-50%);
}
.order-list-box {
  height: calc( 100% - 98rpx );
  padding: 20rpx 24rpx 0;
}
.order-list-box swiper-item {
  height: 100%;
}
.order-list-box scroll-view {
  height: 100%;
}
.order-list-box .order-desc {
  height: 88rpx;
  /* padding-right: 30rpx; */
  border-bottom: 3rpx solid #F2F2F2;
  font-size: 28rpx;
  color: #333;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.order-list-box .order-desc .order-status {
  height: 52rpx;
  line-height: 52rpx;
  font-size: 28rpx;
  color: #333;
  position: relative;
  padding-left: 12rpx;
}
.order-list-box .order-desc .order-status image {
  width: 120rpx;
  height: 52rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -99;
}
.order-list-box .order-detail {
  position: relative;
  padding: 40rpx 30rpx;
  border-bottom: 3rpx solid #F2F2F2;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-direction: column;
}
.order-list-box .order-detail>view {
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
}
.order-list-box .order-button {
  height: 86rpx;
  padding-right: 10rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.order-list-box .order-button button {
  margin: 0;
  padding: 0;
  width: 132rpx;
  height: 58%;
  line-height: 196%;
  text-align: center;
  font-size: 24rpx;
  color: #29c572;
  border: 2rpx solid #29c572;
  border-radius: 50rpx;
  margin-left: 20rpx;
}
.order-list-box .order-item,.order-list-box .commodity-order-item {
  box-shadow:0px 2px 12px 0px rgba(0,0,0,0.08);
  border-radius:6px;
}
.order-list-box .commodity-order-item {
  background: #fff;
  margin: 16rpx 0;
  padding:0 20rpx 20rpx 20rpx;
}
.commodity-order-number{
  width: 54rpx;
  height: 100%;
  display: flex;
  align-items: flex-start;
  justify-content: felx-start;
  color: #666666;
}
.order-shop-info{
  flex: 1;
  padding-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
  height: 100%;
}
.order-shop-title{
  font-weight: 600;
  font-size: 30rpx;
  padding: 26rpx 0;
}
.order-shop-content{
  display: flex;
  align-items: center;
  height: 126rpx;
}
.image-box{
  width: 122rpx;
  height: 122rpx;
  border-radius: 6px;
  overflow: hidden;
}
.image-box image{
  width: 122rpx;
  height: 122rpx;
}
.order-shop-info-title{
  color:#7a7a7a;
  overflow: hidden;
  text-overflow: ellipsis;
  display:-webkit-box; /*作为弹性伸缩盒子模型显示。*/
  -webkit-box-orient:vertical; /*设置伸缩盒子的子元素排列方式--从上到下垂直排列*/
  -webkit-line-clamp:2; /*显示的行*/
}
.order-list-box .order-detail>view {
  width: 100%;
  margin-bottom: 4rpx;
}
.order-list-box .order-detail>view>text:first-child {
  color: #333;
  font-weight: 400;
  width:22%;
  margin-right: 8rpx;
}
.order-list-box .order-detail>view>text:last-child {
  color: #666666;
  display: inline-block;
  flex: 1;

}
.overhidden{
  overflow: hidden;
  height: 40rpx;
  width: 70%;
}

.order-list-box .dianji{
  width: auto;
  color:red;
  font-size:24rpx;
  padding:8rpx;
  position: absolute;
  top:10rpx;
  right: 20rpx;
}
.searchcion {  
  margin: 10rpx 10rpx 10rpx 10rpx;  
  position: absolute;  
  left: 40rpx;
  top: 15rpx;
  z-index: 2;  
  text-align: center;  
}
.green text{
  vertical-align: middle;
  line-height: 50rpx;
}
.green button{
  vertical-align: middle;
  line-height: 50rpx;
  display: inline-block;
  margin-left: 5rpx;
  background: none;
  font-size: 24rpx
}
.green image{
  width:50rpx;
  height:50rpx;
  vertical-align: middle;
}
.mark-pingfen{
  width: 100%;
  height: 100%;
  background: #000;
  opacity: 0.7;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9999;
}
.pingfen{
  width: 75%;
  padding:66rpx 35rpx;
  background: #fff;
  font-size: 30rpx;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  z-index: 9999;
}
.pingfen-star{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.score{
  flex: 1;
  width: 100%;
  height: 180rpx;
  position: relative;
}
.score>view {
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  overflow: hidden;
  width: 100%;
}
.score>view>image {
  width: 44rpx;
  height: 64rpx;
}
  
.star{
  width:12%;
  padding-left:15rpx;
}
.row{
  width:100%;
  flex-direction: row;
  display: flex;
  align-items: center;
  margin-top:5rpx;
  margin-bottom:60rpx;
}
.btnaa{
  width: 80%;
  padding: 8rpx 12rpx;
  background: #64B532;
  color:#fff;
  font-size: 28rpx;
  text-align: center;
  margin: 0 auto;
}
.ckakan{
  padding: 4rpx 6px;
  font-size: 22rpx;
  color: rgb(253,130,50) !important;
  border: 1px solid rgb(253,130,50);
  border-radius: 6px;
  text-align: center;
  position: absolute;
  top: 40rpx;
  right: 0;
}
.is-title{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.4;
  z-index: 9999;
}
.title-box{
  width: 62%;
  height: 30%;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  background: #fff;
  z-index: 9999;
  overflow: auto;
  padding: 40rpx 30rpx 30rpx 30rpx;
  border-radius: 6px;
}
.photo-cancel{
  width: 40rpx;
  height: 40rpx;
  text-align: center;
  position: absolute;
  right: 12rpx;
  top: 12rpx;

}
.title-box-text{
  font-weight: 700;
  color: #333;
  padding: 6rpx 0;
}
.tab-item1.active button,.tab-item2.active button {
  background-color: #29c572;
  color: #ffffff;
  
  }
