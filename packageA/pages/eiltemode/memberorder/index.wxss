@import "/pages/tobuy_welfare/tobuy_welfare.wxss";
.book_info{
  width: 100%;
  height: auto;
  padding: 0 30rpx;
  box-sizing: border-box;
  background: white;
}
.sel{
  position: relative;
  display: flex;
  flex: 1;
  justify-content: flex-end;
}
.sel-text{
  color: #ff1919;
  font-size: 24rpx;
  display: flex;
  justify-content: flex-end;

}
.storehed{
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.shopgoodlist{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
  height: 128rpx;
  padding: 20rpx 0;
  overflow: hidden;
  border-bottom: 1px solid #f1f1f1;
}
.shopgoodlist>image{
  width: 84rpx;
  height: 100%;
}
.shopgoodlist .goodsdata{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
  height: 100%;
  padding: 8rpx 0rpx 8rpx 20rpx;
  font-size: 30rpx;
}
.shopgoodlist .goodsdata .goodsname{
  height: auto;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  padding: 4rpx 0;
}
.shopgoodlist .price{
  display: flex;
  align-items: flex-end;
  height: 100%;
  padding-bottom: 18rpx;
}
.storehed-image{
  width: 44rpx;
  height: 44rpx;
}
.good-desc .header1 {
  font-size: 30rpx;
  padding:10rpx 0 10rpx 0;
}
.good-desc {
  padding: 16rpx 30rpx;
}
.weui-cell{
  display: flex;
  padding: 10rpx;
  margin: 4rpx 0;
}
.weui-cell__bd{
  font-size: 30rpx;
}