page{
  box-sizing: border-box;
  padding-top: 420rpx;
}
/* 隐藏滚动条 */
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
.poster-view-box{
  box-sizing: border-box;
  width: 100%;
  height: 420rpx;
  padding: 20rpx 0;
  position: fixed;
  left: 0;
  top: 0;
  background: #fff;
}
.poster-view-box swiper.swiper {
  width: 100%;
  height: 100%;
}

.poster-view-box swiper.swiper swiper-item.is_secl{
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: auto;
  padding: 0 6rpx;
}
.poster-view-box swiper.swiper .swiper-item-view {
  width: 100%;
  height: 100%;
  padding: 2rpx;
  border-radius: 6px;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  position: relative;
}
.scaleY-1{
  transform: scaleY(1);
  transition:  0.5s;
}
.scaleY-2 {
  transform: scaleY(0.9);
  transition: 0.5s;
}
.poster-view-box swiper.swiper .swiper-item-view image {
  width: 100%;
  height: 100%;
  vertical-align: middle;
}
.image-box{
  width: 100%;
  height: 420rpx;
  overflow: hidden;
}
.image-box>image{
  width: 100%;
  height: 100%;
}
.volundetails-box{
  margin-top: 10rpx;
  padding: 0 10rpx;
  box-sizing: border-box;

}
.volundetails-box1{
  width: 662rpx;
  height: auto;
  margin: 0 auto;
  box-sizing: border-box;
  box-shadow: 0 4rpx 12rpx #00000020;
}
.volundetails-info{
  width: 100%;
  min-height: 320rpx;
  box-sizing: border-box;
  overflow: hidden;
  font-size: 28rpx;
  padding: 10rpx 34rpx 10rpx 20rpx;
  color: #666;
}
.scroll_box{
  height:320rpx;
  font-size: 28rpx;
  padding: 10rpx 34rpx 10rpx 20rpx;
  box-sizing: border-box;
  color: #666;
}
.info-name{
  font-size: 32rpx;
}
.info-text{
  margin-top: 30rpx;
}
.info-text>text{
  height: auto;
  float: left;
}
.valundetails-bott-box{
  padding: 10rpx 60rpx;
  background: #fff;
  font-size: 28rpx;
  width: 100%;
  box-sizing: border-box;
  display: flex;
  position: fixed;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
}
.valundetails-bott-box>view:nth-of-type(2n+1){
  width: 108rpx;
}
.valundetails-bott-box>view:nth-of-type(2n+1)>.bott-box-icon{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
}
.valundetails-bott-box>view:nth-of-type(2n+1)>.bott-box-icon>image{
  width: 100%;
  height: 100%;
}
.valundetails-bott-box>view:nth-of-type(2n+1)>.bott-box-title{
  margin-top: 2rpx;
  font-size: 24rpx;
  text-align: center;

}
.bott_arrow{
  flex: 1;
  height: 108rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.bott_arrow>image{
  width: 63rpx;
  height: 24rpx;
}

/* ===========================弹窗========================================== */
.is-pop-mark{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.4;
  z-index: 9999;
}
.is-pop-box{
  width: 620rpx;
  height: auto;
  background: #fff;
  border-radius: 6px;
  padding: 12rpx 28rpx;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  z-index: 9999;
  box-sizing: border-box;
}
.section-info-title{
  font-size: 32rpx;
  color: #333;
}
.page-section-title{
  margin-top: 10rpx;
  font-size: 28rpx;
  font-weight: 600;
}
.weui-cell__bd{
  margin: 14rpx 0;
  background: #f0f0f0ec;
}
.weui-input{
  font-size: 28rpx;
  padding: 6rpx;
}
.btn-area>button{
  margin-top: 24rpx;
  line-height: 2;
  width: 218rpx;
  border-radius: 20px;
  background: #4ac081;
  font-size: 30rpx;
  color: #fff;
}
.button-hover {
  color: rgba(0,0,0,.6);
  background-color: #dedede;
}
  
.activity-imgs {
  box-sizing: border-box;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
  margin-top: 20rpx;
}
.activity-imgs>image {
  width: 130rpx;
  height: 130rpx;
  margin: 0 10rpx 10rpx 0;
}
.activity-imgs view image.add-pic-icon {
  width: 84rpx;
  height: 84rpx;
  vertical-align: middle;
}
.layer {
  width: 100vw;
  height: 100vh;
  position: fixed;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  z-index: 99999;
}
.layer .cover {
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 9999;
  background: #333;
}
.layer .con {
  position: relative;
  height: 100vh;
  z-index: 99999;
  text-align: center;
  font-size: 36rpx;
}
.layer .con image {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.layer .con .txt {
  width: 120rpx;
  height: 120rpx;
  line-height: 120rpx;
  font-size: 30rpx;
  border-radius: 50%;
  position: fixed;
  left: 50%;
  bottom: 120rpx;
  text-align: center;
  background: #f33;
  color: #fff;
  transform: translate(-50%, 0);
}
.add-pic{
  padding: 12rpx;
  background: #ccc5c5;
  border-radius: 6px;
}
.weui-radio{
  display: flex;
  align-items: center;
  margin-top: 14rpx;
  font-size: 28rpx;
}
.weui-check__label{
  display: flex;
  align-items: center;
  margin: 0 12rpx;
  padding: 8rpx 0;
}
.shengshi{
  font-size: 28rpx;
  color: #adabab;
  padding: 8rpx 6rpx;

} 
.sell_pop{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99999;
  background: #666;
  opacity: 0.4;
}
.sell_pop_box{
  width: 620rpx;
  height: auto;
  background: #fff;
  border-radius: 6px;
  padding: 28rpx 44rpx 30rpx 30rpx;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  z-index: 99999;
  box-sizing: border-box;
}
.items_detail_activity {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-top: 16rpx;
  font-size: 26rpx;
  color: #a2a2a2;
}
.items_detail_activity view {
  display: flex;
  align-items: center;
  justify-content: center;
}
.items_detail_activity text {
  padding-left: 10rpx;
}
.discuss_box{
  margin-top: 30rpx;
}

.discuss_title{
  font-size: 32rpx;
  font-weight: 600;
}
.discuss_list{
  margin: 30rpx 0;
  width: 100%;
  box-sizing: border-box;
  display: flex;
  align-items: flex-start;
  box-shadow: 0 4rpx 12rpx #00000020;
  padding: 10rpx;

}
.info_left{
  width: 65rpx;
  height: 65rpx;
  border-radius: 50%;
}
.info_right{
  padding-left: 20rpx;
  padding-top: 10rpx;
}
.info_right_title{
  font-size: 30rpx;
  font-weight: 600;
}
.info_right_time,.info_right_text{
  font-size: 24rpx;
  color: #999;
  margin-top: 12rpx;
}
.addwx-wrap {
  background: #f4f4f4;
  padding: 24rpx;
  position: fixed;
  bottom: 0;
  left: 50%;
  width: 100%;
  box-sizing: border-box;
  transform: translate(-50%, 0);
  display: flex;
  align-items: center;
  z-index: 99999;
}
.addwx-wrap .inp {
  font-size: 28rpx;
  background: #fff;
  border-radius: 8rpx;
  height: 64rpx;
  padding-left: 20rpx;
  line-height: 64rpx;
  flex: 1;
}
.addwx-wrap .send-btn {
  background: #64B532;
  border-radius: 8rpx;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 28rpx;
  color: #fff;
  display: block;
  padding: 0 34rpx;
  margin-left: 36rpx;
}
  