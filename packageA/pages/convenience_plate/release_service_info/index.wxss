page{
  box-sizing: border-box;
  padding: 15rpx 0;
}
.release_section_box{
  width: 100%;
  box-sizing: border-box;
  padding: 15rpx 0;
}
.release_section_2{
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
}
.release_title{
  font-size: 32rpx;
  font-weight: 600;
  padding: 0 30rpx;
}
.release_box{
  padding: 10rpx 10rpx 0 10rpx;
  display: flex;
  flex-wrap: wrap;
  box-sizing: border-box;
}
.release_items{
  width: 192rpx;
  height: 70rpx;
  overflow: hidden;
  border-radius: 6px;
  margin: 14rpx 22rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  border: 1px solid #4ac081;
  font-size: 28rpx;
}
.release_items.seled_style{
  background: #4ac081;
  color: #fff;
}
.section_2_items{
  padding: 0 14rpx;
  box-sizing: border-box;
}
.input_box{
  box-sizing: border-box;
  width: 100%;
  padding: 14rpx 0;
  display: flex;
  align-items: flex-start;
  font-size: 28rpx;
}
.input_title{
  flex: 1;
  text-align: left;
}
.radio_title{
  text-align: left;
}
.weui-check__label{
  margin: 0 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.input_items{
  height: 50rpx;
  width: 520rpx;
  overflow: hidden;
}
.picker_items{
  height: 50rpx;
  width: 520rpx;
  overflow: hidden;
  background: #f8f5f5;
  padding-left: 20rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
}
.input_items>input{
  width: 100%;
  height: 100%;
  background: #f8f5f5;
  padding-left: 20rpx;
}

.input_items>textarea{
  width: 100%;
  height: 200rpx;
  background: #f8f5f5;
  padding: 20rpx;
  box-sizing: border-box;
  overflow: hidden;
}
.btn-area{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 54rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  box-sizing: border-box;
  background: #fff;
  z-index: 999;
}
.btn-area>button{
  line-height: 1.5;
  font-size: 28rpx;
  width: 250rpx;
  padding: 20rpx 0;
  margin: 0;
  width: 46%;
}
.preview_btn{
  border: 1rpx solid;
}
.activity-imgs {
  box-sizing: border-box;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
}
.activity-imgs image {
  width: 150rpx;
  height: 150rpx;
  margin: 14rpx 14rpx 10rpx 0;
}
.activity-imgs view {
  width: 124rpx;
  height: 124rpx;
  position: relative;
  border: 2rpx solid #999;
  border-radius: 12rpx;
  background: #d1d1d1;
}
.activity-imgs view image {
  width: 84rpx;
  height: 84rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
}
.layer {
  width: 100vw;
  height: 100vh;
  position: fixed;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  z-index: 999;
}
.cover {
  width: 100%;
  height: 100%;
  opacity: 0.5;
  position: fixed;
  background-color: black;
  top: 0;
  left: 0;
  overflow: hidden;
  z-index: 9999;
}
.layer .cover {
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 3;
  background: #333;
}
.layer .con {
  position: relative;
  height: 100vh;
  z-index: 4;
  text-align: center;
  font-size: 36rpx;
}
.layer .con image {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.layer .con .txt {
  width: 120rpx;
  height: 120rpx;
  line-height: 120rpx;
  font-size: 30rpx;
  border-radius: 50%;
  position: fixed;
  left: 50%;
  bottom: 20rpx;
  text-align: center;
  background: #f33;
  color: #fff;
  transform: translate(-50%, 0);
}
.shuoming{
  font-size: 24rpx;
  color: #999;
  padding-left: 100rpx;
}
  