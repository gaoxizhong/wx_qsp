page{
  background:#e9e8e8;
}
.wechat-title-box{
  background: #f9f9f9;
  padding: 50rpx 42rpx;
  box-sizing: border-box;
}
.wechat-title-node{
  width: 100%;
  height: 108rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}
.title-node-left{
  width: 108rpx;
  height: 108rpx;
  overflow: hidden;
  border-radius: 4px;
}
.title-node-left>image{
  width: 100%;
  height: 100%;
}
.title-node-right{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100%;
  padding: 8rpx 0 8rpx 38rpx;
  box-sizing: border-box;
}
.right-title{
  font-size: 32rpx;
  color: #000;
}
.introduce-box{
  margin: 30rpx 0;
  width: 100%;
  background: #fff;
  box-sizing: border-box;
  height: auto;
  padding-left: 30rpx;
  display: flex;
  justify-content: flex-start;
  font-size: 30rpx;
}
.introduce-text{
  color:#d3cece; 
  padding:20rpx; 
  flex:1;
  overflow: hidden;
  font-size: 28rpx;
}
.instructions-box{
  margin: 30rpx 0;
  width: 100%;
  background: #fff;
  box-sizing: border-box;
  height: auto;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  padding: 30rpx;
  box-sizing: border-box;

}
.instructions-padd{
  width: 100%;
  padding-bottom: 20rpx;
  font-size: 26rpx;

}
.instructions-introduce-box{
  width: 100%;
  background: #fff;
  box-sizing: border-box;
  height: auto;
  display: flex;
  justify-content: space-between;
  padding-top: 20rpx 0;
  align-items: center;
  padding: 20rpx 0;
}
.instructions-introduce-text{
  color:#1f1f1f; 
  flex:1;
  overflow: hidden;
  font-size: 28rpx;
  padding-left: 20rpx;
}
.theycount-box{
  width: 100%;
  height: auto;
  margin: 20rpx 0;
  background: #fff;
  font-size: 28rpx;
  padding: 20rpx 0;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
.conversion-btn{
  width: 246rpx;
  height: 60rpx;
  font-size: 30rpx;
  line-height: 60rpx;
  text-align: center;
  background: #4ac081;
  color: #fff;
  border-radius: 20px;
  margin-top: 30rpx;
}
.hover-btn{
  color: rgba(0,0,0,.6);
  background-color: #dedede;
}
.theycount-box-info{
  width: 100%;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  padding: 30rpx 0;
}
.theycount-box-info>view{
  flex: 1;
  display: flex;
  align-items: center;
  padding-left: 30rpx;
}
.number-box{
  padding-left: 20rpx;
}
.instr-btn{
  width: auto;
  padding: 6rpx 20rpx;
  box-sizing:border-box;
  background: orange;
  color: #fff;
  font-size: 24rpx;
  border-radius: 30rpx;
  display: inline-block;
}

.instr-btn-box{
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding-right: 10rpx;
}