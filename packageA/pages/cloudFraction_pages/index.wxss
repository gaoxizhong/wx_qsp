.indexbg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 122rpx;
  overflow: hidden;
  z-index: -1;
}
.indexbg>image {
  width: 100%;
  height: 100%;
}
.kapian-box {
  height: auto;
  z-index: 100;
  margin: 0 20rpx;
  box-sizing: border-box;
  border-radius: 6px;
  overflow: hidden;
  background: #fff;
  padding: 30rpx;
  box-shadow: 0 0 10px 1px #00000020;
  margin-top: 10px;
}
.kapian-box>view{
  text-align: center;
}
.kapian-box>view.kapian-1{
  text-align: left;
  font-size: 28rpx;
}
.kapian-2{
  font-size: 60rpx;
  font-weight: 600;
  color: #4ac081;
  padding: 25rpx 0;
}
.kapian-2>text{
  font-size: 38rpx;
}
.kapian-3{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 70rpx;
  font-size: 28rpx;
}
.kapian-3>view{
  flex: 1;
  margin: 0 10px;
  height: 70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 20px;
  color: #fff;
}
.kapian-3>view.kapian-3-1{
  background-color: #4ac081;
}
.kapian-3>view.kapian-3-2{
  background-color: #f9783e;
}
.info-box{
  width: 100%;
  box-sizing: border-box;
  padding: 80rpx 0;
}
.QRcode-box{
  width: 210rpx;
  height: 210rpx;
  margin: 0 auto;
}
.QRcode-box image{
  width: 100%;
  height: 100%;
}
.info-text-box{
  padding-top: 30rpx;
  font-size: 32rpx;
  text-align: center;
}
.info-text-box>view{
  padding: 4rpx 0;
}
.kapian-4{
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
  font-size: 28rpx;
}
.kapian-4>view{
  width: 284rpx;
  height: 78rpx;
  border-radius: 20px;
  background: #4ac081;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* ===================================== */
.infoPlate-box {
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  padding: 40rpx 0;
}
.infoPlate-Push-box {
  width: 442rpx;
  height: 112rpx;
  position: relative;
}
.infoPlate-Push-box>image {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  right: 0;
}
.infoPlate-text {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  font-size: 32rpx;
  padding-top: 24rpx;
  box-sizing: border-box;
  font-weight: 600;
  color: #fff;
  text-align: center;
}
.hoverClass{
  opacity: 0.8;
}
/* ====================== */
.is-pop-mark {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.4;
  z-index: 9999;
}
.is-pop1-box{
  width: 570rpx;
  height: auto;
  background: #fff;
  border-radius: 6px;
  padding: 40rpx 30rpx;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  z-index: 9999;
  box-sizing: border-box;
}
.is-pop-box {
  width: 650rpx;
  height: 378rpx;
  background: #fff;
  border-radius: 6px;
  padding: 12rpx 28rpx;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  z-index: 9999;
  box-sizing: border-box;
}
.is-pop-listbox {
  width: 100%;
  overflow-y: scroll;
}
.newbtn-area {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0;
  position: absolute;
  left: 0;
  bottom: 0;
  background: #fff;
}
.newbtn-area1 {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20px;
  background: #fff;
}
.newbtn-area>button,.newbtn-area1>button {
  line-height: 1;
  width: 450rpx;
  border-radius: 20px;
  background: #4ac081;
  font-size: 30rpx;
  color: #fff;
  padding: 20rpx 30rpx;
}
.infoItem-title {
  font-size: 30rpx;
  font-weight: bold;
}
.items-list {
  width: 100%;
  height: auto;
  position: relative;
  box-sizing: border-box;
}
.infoItem-list-box {
  margin: 20rpx 0;
  padding: 20rpx 16rpx;
  background: #fff;
  border-radius: 8px;
  display: flex;
  align-items: center;
  box-shadow: 0 0 2px #00000020;
}
.index-list-img {
  width: 76rpx;
  border-radius: 50%;
}
.list-titletext {
  flex: 1;
  padding-left: 20rpx;
  font-size: 30rpx;
}
.list-top-sele {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.list-top-sele>image {
  width: 100%;
}
.is-pop1view{
  font-size: 30rpx;
}