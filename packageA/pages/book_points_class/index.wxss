.swiper-container {
  width: 100%;
  height: 200rpx;
}
.swiper-container .swiper {
  height: 200rpx;
}
.swiper-container image {
  width: 100%;
  height: 100%;
} 
.page-listbox {
  padding: 0 30rpx;
  margin-top: 40rpx;
}
.listbox-images{
  width: 100%;
  height: auto;
  margin-top: 50rpx;
  box-sizing: border-box;
}
.listbox-images>image{
  width: 100%;
}
.listbox-view{
  height: 188rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;
}
.listbox-view>view {
  flex:1;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
  }
.listbox-view>view image.images-1 {
  width: 84rpx;
  height: 84rpx;
  border-radius: 50%;
  transition: all 0.2s linear;
}
.listbox-view>view image.images-2{
  width: 36rpx;
  height: 28rpx;
  position: absolute;
  bottom:-36rpx;
  left: 50%;
  transform: translateX(-50%);
}
.sale{
  transform: scale(1.2);
}
.listbox-view-text{
  font-size: 30rpx;
  padding-top: 14rpx;
}
.listbox-btn {
  padding: 24rpx 34rpx;
  position: fixed;
  left: 50%;
  bottom: 0;
  transform: translateX(-50%);
  width: 100%;
  background: #fff;
  box-sizing: border-box;
}
.footer-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  color: #fff;
  height: 80rpx;
  border-radius: 20px;
  background-image: linear-gradient(to right, #2eae84 , #6cd67f);
}
  
  