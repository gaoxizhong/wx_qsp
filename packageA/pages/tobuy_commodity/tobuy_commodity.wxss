page {
  box-sizing: border-box;
  font-family: PingFangSC-Regular,PingFangSC;
  background: #F7F7F7;
}
.divide {
  background-color: #F7F7F7;
}
.price-info {
  padding: 0 30rpx;
  text-align: right;
  font-size: 30rpx;
  height: 76rpx;
  line-height: 76rpx;
  background: white;
}
.freight_desc {
  padding: 20rpx 30rpx;
  font-size: 26rpx;
  color: #808080;
}
.good-info {
  width: 100%;
  height: auto;
  display: flex;
  padding: 20rpx;
  box-sizing: border-box;
  background: white;
}
.goods-info-box{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.good-info image {
  width: 182rpx;
  height: 162rpx;
  margin-right: 16rpx;
}
.good-info .good-title {
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 30rpx;
  overflow: hidden;
}
.good-info .good-sum {
  font-size: 30rpx;
  text-align: right;
}
.radio-group {
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  flex-direction: column;
}
.radio-group .radio {
  font-size: 28rpx;
  margin-bottom: 14rpx;
}
.change-address {
  padding: 25rpx;
  font-size: 30rpx;
  position: relative;
  background: white;
  height: auto;
  box-sizing: border-box;
  margin-bottom: -4%;

}
.change-address image {
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  top: 50%;
  right: 30rpx;
  transform: translateY(-50%);
}
.change-address .address {
  width: 93%;
}
.price-info-list {
  font-size: 30rpx;
  color: #0D0D0D;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: white;
}
.edit-address {
  height: auto;
  box-sizing: border-box;
  margin-bottom: -30rpx;
  margin-top: 0;
  font-size: 30rpx;
  color: #0D0D0D;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: white;
  padding: 20rpx 0;
}
.edit-address1{
  padding: 16rpx 0;
}
.edit-address2{
  padding: 18rpx 0;
}
.edit-address image {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}
.edit-info {
  padding: 36rpx 24rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  background: white;
}
.edit-info>view.need-hbb,.edit-info>view.end-time {
  height: 92rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 18rpx;
  border-bottom: 2rpx solid #eee;
}
.edit-info>view>text {
  width: 20%;
}

.edit-info>view view {
  flex: 1;
  height: 100%;
}
.edit-info view text {
  margin-right: 36rpx;
}
.edit-info view picker {
  flex: 1;
  height: 92rpx;
  left: 30%;
}
.edit-info view picker view {
  height: 92rpx;
  line-height: 92rpx;
  text-align: left;
  color: #808080;
}
.edit-info button {
  margin: 24rpx auto;
  width: 40%;
  height: 55rpx;
  line-height: 55rpx;
  border-radius: 50rpx;
  /* background-color: #64B532; */
  background-image: linear-gradient(to right, #4AC081 , #6cd67f);

  color: #fff;
  font-size: 28rpx;
}
.introduction {
  height: 80rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding-left: 36rpx;
}
.introduction view {
  width: 70rpx;
  height: 24rpx;
  border-radius: 20rpx;
  padding: 0 8rpx;
  line-height: 24rpx;
  background-color: #64B532;
  color: #fff;
  font-size: 14rpx;
  text-align: center;
  position: relative;
}
.introduction view::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 4rpx;
  transform: translateY(-50%);
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background-color: #fff;
}
.introduction text {
  font-size: 26rpx;
  flex: 1;
  margin-left: 26rpx;
  color: #040404;
}
.good-desc {
  /* margin-bottom: 98rpx; */
  padding: 16rpx;
  /* height:  */
  background: white;
}
.good-desc .desc-title {
  font-size: 32rpx;
  color: #2F2F2F;
  position: relative;
  margin-left: 36rpx;
  margin-bottom: 28rpx;
}
.good-desc .desc-title::after {
  content: '';
  width: 18rpx;
  height: 18rpx;
  border-radius: 50%;
  background-color: #64B532;
  position: absolute;
  top: 50%;
  left: -36rpx;
  transform: translateY(-50%);
}
.good-desc .desc-info {
  color: #9C9A9A;
  font-size: 28rpx;
}
.bottom-buy {
  position: fixed;
  bottom: 0;
  height: 98rpx;
  width: 100%;
  padding: 0 16rpx;
  box-shadow:0rpx -5rpx 13rpx 0rpx rgba(0,0,0,0.07);
  background-color: #fff;
  box-sizing: border-box;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-top: 20rpx;
  z-index: 99;
}
.bottom-buy .price {
  flex: 1;
  color: #646362;
  font-size: 30rpx;
}
.bottom-buy .num {
  width: 200rpx;
  height: 100%;
  margin-right: 20rpx;
  margin-left: 10rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.bottom-buy .num image {
  width: 28rpx;
  height: 34rpx;
}
.bottom-buy .num input {
  flex: 1;
  text-align: center;
  margin: 0 20rpx;
}
.bottom-buy .to-buy {
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #fff;
  text-align: center;
  background-color:#fd7c32;
  border-radius: 60rpx;
}

.good-desc .header{
  font-size: 30rpx;
  padding: 20rpx 0 20rpx 0;
}

/*radio 选项框大小  */
.good-desc radio .wx-radio-input {
  width: 35rpx;
  height: 35rpx;
  border-radius: 50%;
}

/*radio选中后样式  */
/* .good-desc radio .wx-radio-input.wx-radio-input-checked {
  background: #29c572;
  border-color:#29c572;
} */
/*radio选中后图标样式  */
.good-desc radio .wx-radio-input.wx-radio-input-checked::before {
  width: 30rpx;
  height: 30rpx;  
  line-height: 30rpx;
  text-align: center;
  font-size: 22rpx;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}
.delivery .list{
  display: flex;
  padding: 10rpx 10rpx 10rpx 10rpx
}
.delivery radio-group{
   width: 100%;
   display: block;
   background: #F7F7F7;
}

.delivery radio-group .radio{
   width: 91%;
   padding-left: 10rpx;
   margin: 0
}
.delivery radio-group .items{
  color: #000;
  margin: 0;
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-radius: 0;
  border-bottom: 1px solid #f4f4f4;
  background: white;
}

.time-picker {
  text-align: left;
  font-size: 28rpx;
  color: #000;
  flex: 1;
}

.delivery radio-group > .items text {
  font-size: 28rpx;
  color: #1a1a1a;
}
.delivery radio-group > .items text {
  width: 200rpx;
  text-align: left;
}
.delivery radio-group > .items input {
  font-size: 28rpx;
}
.delivery radio-group > .items .min_icon {
  display: flex;
  align-items: center;
  margin-left: auto;
}
.delivery radio-group > .items .min_icon image {
  width: 12rpx;
  height:11rpx;
  margin-left: 40rpx;
}

/*radio 选项框大小  */
.delivery radio .wx-radio-input {
  width: 25rpx;
  height: 25rpx;
  border-radius: 50%;
}
/*radio选中后样式  */
/* .delivery radio .wx-radio-input.wx-radio-input-checked {
  background: #56b725;
  border-color:#56b725;
} */

/*radio选中后图标样式  */
.delivery radio .wx-radio-input.wx-radio-input-checked::before {
  width: 20rpx;
  height: 20rpx;  
  line-height: 20rpx;
  text-align: center;
  font-size: 22rpx;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

.delivery .settingPrice{
  color: rgb(253,130,50);
  font-size: 28rpx;
  width: 20%;
  text-align: end;
  margin-right: 10rpx;
  overflow: hidden;
}
.delivery .name{
  font-size: 28rpx;
  color: #666;
}

.delivery .delivery_desc{
  font-size: 23rpx;
  padding: 20rpx;
  padding-left: 0;
}

.delivery .delivery_desc image{
  height: 36rpx;
  width: 36rpx;
  vertical-align: middle;
}

.delivery .delivery_desc text{
  vertical-align: middle;
  color: #999999;
  padding-left: 10rpx;
}
.remark{
  width: 75%;
  text-align: left;
}
.mask{
  width:100%;
  height:100%;
  position:fixed;
  background-color:#999;
  z-index:9999;
  top:0;
  left:0;
  opacity:0.5;
}
.popups{
  width: 100%;
  height: 45%;
  background: #fff;
  z-index: 9999;
  position: fixed;
  bottom: 0;
}
.popups .main{
  padding: 30rpx
}

.popups .main .title{
  font-size: 37rpx;
}

.popups .main view{
  padding: 15rpx;
  letter-spacing: 5rpx;
  font-size: 30rpx;
  color: #333;
}
.popups .main view .tips{
  color:#56b725;
}
.popups .main button{
  background: #56b725;
  color: #fff;
  border-radius: 90rpx;
  width: 45%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  letter-spacing: 5rpx;
  margin-top: 30rpx;
}
.total-price{
  color: rgb(253,130,50);
  margin-right: 12rpx;
}
.delivery_address_sel{
  background: rgb(178,217,154);
}