.is_progress_box{
  width:auto;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  background: #fff;
  border-radius: 6px;
  margin: 20rpx;
}
.is_progress_bar {
  width: 650rpx;
  padding: 20rpx 0;
  box-sizing: border-box;
  margin: 0 auto;
}
.progress_btn_box {
  width: 100%;
  text-align: center;
  font-size: 28rpx;
  padding: 20rpx 0;
}
.djs-box{
  text-align: right;
  font-size: 32rpx;
  font-weight: 600;
}
.progress-box{
  position: relative;
  box-sizing: border-box;
}
.progress-box progress {
  /* border: 2px solid #ec7a2e; */
  border-radius: 20px;
}
.tb-box{
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  top: 0;
  background: #fff;
  border-radius: 50%;
  overflow: hidden;
  box-sizing: border-box;
}

.tb-box>.tb-img-1{
  width: 100%;
}
.tb-img-2{
  width: 24rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  z-index: 100;
  animation: show_ani 4s linear infinite;
}
@keyframes show_ani{
  0%{
    opacity: 1;
  }
  33.333%{
    opacity: 0;
  }
  66.666%{
    opacity: 1;
  }
  100%{
    opacity: 0;
  }
}
