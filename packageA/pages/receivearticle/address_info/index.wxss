page{
  background: #fff;
  padding: 0 30rpx;
  font-size: 28rpx;
  box-sizing: border-box;
} 
.door-info{
  padding-top: 40rpx;
}
.reservation-date{
  padding-top: 40rpx;
}
.door-info-title{
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  padding-bottom: 15rpx;
}
.door-info-input>view{
  display: flex;
  align-items: center;
  margin: 20rpx 0;
  height: 72rpx;
}
.door-info-input>view>text{
  display: inline-block;
  width: 94rpx;
  text-align: left;
  font-size: 28rpx;
}
.door-input-view{
  flex: 1;
  background: #e5e5e5;
  border-radius: 6px;
  height: 100%;
  padding-left: 10rpx;
}
.door-input-view>input,.door-input-view>picker{
  width: 100%;
  height: 100%;
  line-height: 72rpx;
}
.shengshi{
  height: 100%;
  line-height: 72rpx;
}
.btn-sub {
  position: fixed;
  bottom: 0;
  left: 0;
  padding: 38rpx 60rpx;
  width: 100%;
  background: #fff;
  box-sizing: border-box;
}
.btn-box {
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  width: 100%;
  border-radius: 10px;
  background: #4bc381;
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
}
  
  