page{
  background:#f9f9f9;
}
.wechat-title-box{
  background: #fff;
  padding: 50rpx 42rpx;
  box-sizing: border-box;
}
.wechat-title-node{
  width: 100%;
  height: 108rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}
.title-node-left{
  width: 108rpx;
  height: 108rpx;
  overflow: hidden;
  border-radius: 4px;
}
.title-node-left>image{
  width: 100%;
  height: 100%;
  border-radius: 6px;
}
.title-node-right{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100%;
  padding: 8rpx 0 8rpx 38rpx;
  box-sizing: border-box;
}
.right-title{
  font-size: 32rpx;
  color: #000;
}
.introduce-box{
  margin: 20rpx 0;
  width: 100%;
  background: #fff;
  box-sizing: border-box;
  height: auto;
  padding-left: 30rpx;
  display: flex;
  justify-content: flex-start;
  font-size: 30rpx;
}
.introduce-text{
  color:#d3cece; 
  padding:20rpx; 
  flex:1;
  overflow: hidden;
  /* text-overflow: ellipsis; 
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1; */
  font-size: 28rpx;
}
.binding-butt{
  width: 100%;
  height: 127rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
  font-size: 32rpx;
  color: #4ac081;
  font-weight: 600;
  box-sizing: border-box;
  margin: 34rpx 0;
}
.theycount-box{
  width: 100%;
  height: 230rpx;
  margin: 20rpx 0;
  background: #fff;
  font-size: 28rpx;
  padding: 20rpx 0;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
.conversion-btn{
  width: 246rpx;
  height: 60rpx;
  font-size: 30rpx;
  line-height: 60rpx;
  text-align: center;
  background: #4ac081;
  color: #fff;
  border-radius: 20px;
}
.hover-btn{
  color: rgba(0,0,0,.6);
  background-color: #dedede;
}
.theycount-box-info{
  width: 100%;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  padding: 20rpx 0;
}
.theycount-box-info>view{
  flex: 1;
  display: flex;
  align-items: center;
  padding-left: 30rpx;
}
.number-box{
  padding-left: 20rpx;
}


.title-box>view.title-text{
  flex: 1;
  text-align: right;
  padding-right: 60rpx;
}

  