page {
  font-family: PingFangSC-Regular,PingFangSC;
  box-sizing: border-box;
  position: relative;
  background: #f2f2f2;
}
.popularActivity-box {
  width: auto;
  margin: 30rpx 20rpx;
  background: #fff;
  border-radius: 8px;
  box-sizing: border-box;
  padding: 20rpx 10rpx;
}
.popularActivity-list-box {
  width: 100%;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
}
.popularActivity-list-box>view {
  width: 100%;
  height: 180rpx;
  position: relative;
  display: flex;
  align-items: center;
}
.popularActivity-list-box>view.list-before::before{
  content: '';
  width: 100%;
  height: 1px;
  transform: scaleY(0.5);
  -webkit-transform: scaleY(0.5);
  position: absolute;
  bottom: 0;
  left: 0;
  background: #c0c0c0; 
}
.popularActivity-list-titletext {
  flex: 1;
  padding-left: 20rpx;
  font-size: 32rpx;
}
.btn-box{
  width: 154rpx;
  height: 87rpx;
  position: relative;
  text-align: center;
  color: #fff;
}
.my-more {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 0;
}
.acList-r-btn-text {
  position: absolute;
  top: 10rpx;
  left: 50%;
  transform: translateX(-50%);
  z-index: 1;
  font-size: 26rpx;
  display: inline-block;
  width: 100%;
}
.nulldata_wrap{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.hoverClass{
  opacity: 0.8;
}