page{
  box-sizing: border-box;
  padding-top: 420rpx;
}
/* 隐藏滚动条 */
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
.poster-view-box{
  box-sizing: border-box;
  width: 100%;
  height: 420rpx;
  padding: 10rpx 0;
  position: fixed;
  left: 0;
  top: 0;
}
.poster-view-box swiper.swiper {
  width: 100%;
  height: 100%;
}

.poster-view-box swiper.swiper swiper-item.is_secl{
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: auto;
  padding: 0 6rpx;
}
.poster-view-box swiper.swiper .swiper-item-view {
  width: 100%;
  height: 100%;
  padding: 2rpx;
  border-radius: 6px;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  position: relative;
}
.scaleY-1{
  transform: scaleY(1);
  transition:  0.5s;
}
.scaleY-2 {
  transform: scaleY(0.9);
  transition: 0.5s;
}
.poster-view-box swiper.swiper .swiper-item-view image {
  width: 100%;
  height: 100%;
  vertical-align: middle;
}
.image-box{
  width: 100%;
  height: 420rpx;
  overflow: hidden;
}
.image-box>image{
  width: 100%;
  height: 100%;
}
.volundetails-box{
  margin-top: 10rpx;
  padding: 0 10rpx;
  box-sizing: border-box;

}
.volundetails-box1{
  width: 662rpx;
  height: auto;
  margin: 0 auto;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-shadow: 0 4rpx 12rpx #00000020;
  background-image: url(data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAUoAAADZAgMAAAA7wpHPAAAADFBMVEX////q6ur7+/vt7e1n04BvAAAANklEQVR42u3MsQ0AMAjAsK79tteUdzkCWJCtzDkAAAAAUBP3dfVHngAAAAAAAAAAAAAAAMAeCcvvNk3L2+NeAAAAAElFTkSuQmCC);
}
.volundetails-info{
  width: 100%;
  min-height: 320rpx;
  box-sizing: border-box;
  overflow: hidden;
  font-size: 28rpx;
  padding: 10rpx 34rpx 10rpx 20rpx;
  color: #666;
}
.scroll_box{
  height:320rpx;
  font-size: 28rpx;
  padding: 10rpx 34rpx 10rpx 20rpx;
  box-sizing: border-box;
  color: #666;
}
.info-text>text{
  height: auto;
  float: left;
}
.valundetails-bott-box{
  padding: 22rpx 45rpx;
  background: #fff;
  font-size: 28rpx;
  width: 100%;
  box-sizing: border-box;
  display: flex;
  position: fixed;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.sel_img{
  position: absolute;
  left: 0;
  top: 0;
  z-index: 100;
}

.volundetails-title{
  width: 100%;
  height: 140rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 38rpx;
  color: #2fd07a;
  font-weight: 600;
}
.bott-box-btn{
  width: 282rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin: 0 auto;
  border-radius: 20px;
  background: #4ac081;
  color: #fff;
