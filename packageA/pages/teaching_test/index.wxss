page{
  padding: 20rpx;
  box-sizing: border-box;
}
.text-title{
  width: 100%;
  padding: 20rpx;
  font-size: 32rpx;
  box-sizing: border-box;
  box-shadow: 0 0 10px 2px #00000020;
}
.test-title-box{
  width: 100%;
  height: 144rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #4ac081;
  color: #fff;
  font-size: 38rpx;
}
.anwer-title-box{
  width: 100%;
  padding: 20rpx 0;
  text-align: center;
  font-size: 36rpx;
  font-weight: 600;
  color: #4ac081;
}
.answer-list-box{
  width: 100%;
  height: auto;
  font-size: 30rpx;
  box-sizing: border-box;
  padding: 10rpx 30rpx;
}
.answer-items{
  width: 100%;
  margin: 20rpx auto;
}
.answer-options-box{
  width: 100%;
  padding: 10rpx 30rpx;
  box-sizing: border-box;
}
.options-list{
  margin: 20rpx 0;
  font-size: 28rpx;
}

.footer-btn {
  width: 100%;
  height: 170rpx;
  background: #fff;
  padding: 0 60rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: fixed;
  left: 0;
  bottom: 0;
  box-sizing: border-box;
  z-index: 99999;
}
.footer-btn button {
  width: 270rpx;
  height: 70rpx;
  margin: 0;  
  color: #fff;
  text-align: center;
  border-radius: 20px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
}
.footer-btn button image{
  width: 100%;
  height: 100%;
}
