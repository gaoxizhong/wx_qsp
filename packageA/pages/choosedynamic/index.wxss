  color:#999999;
}
.release-textarea{
  padding: 0 10rpx;
  width: 100%;
  height: 230rpx;
  box-sizing: border-box;
}
.release-btn-box{
  width: 142rpx;
  height: 58rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.release-btn{
  width: 100%;
  height: 54rpx;
  border-radius: 20px;
  background: #4ac081;
  color: #fff;
  font-size: 24rpx;
  text-align: center;
  line-height: 54rpx;
}
.photo-box {
  padding: 25rpx 15rpx 15rpx;
  font-size: 0;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  margin-top: 14rpx;
}
.photo {
  width: 215rpx;
  height: 215rpx;
  box-sizing: border-box;
  font-size: 0;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
