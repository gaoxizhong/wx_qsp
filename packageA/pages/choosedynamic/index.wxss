  background-color: #fff;
  position: relative;
  box-shadow: 0 2rpx 20rpx 2px #00000020;
}
.release-info-box{
  width: 100%;
  box-sizing: border-box;
  display: flex;
  align-items: flex-start;
  font-size:28rpx;
}
.release-textarea-box{
  flex: 1;
  height: auto;
  box-sizing: border-box;
}
.release-textarea1{
  height: 60rpx;
