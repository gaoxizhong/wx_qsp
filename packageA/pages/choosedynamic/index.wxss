  width: 52rpx;
  height: 42rpx;
}
.announcement-img-box image {
  width: 100%;
  height: 100%;
}
.seleNav-box{
  width: 100%;
  height: auto;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}
.seleNav-box>view{
  flex: 1;
  box-sizing: border-box;
  margin: 20rpx 10rpx;
  border-radius: 8px;
