.mydynamic-box {
  background: #fff;
  margin: 20rpx 0;
  font-size: 32rpx;
  box-shadow: 0rpx 0rpx 10rpx 1px #00000020;
  padding: 20rpx 10rpx 10rpx 10rpx;
  position: relative;
}
.circle-head {
  display: flex;
  align-items: center;
  position: relative;
}
.circle-head .photo {
  background: #fff;
  border-radius: 8rpx;
  width: 90rpx;
  height: 78rpx;
  overflow: hidden;
  margin-right: 20rpx;
}
.name_box {
  display: flex;
  align-items: flex-end;
}
.circle-head .time {
  display: flex;
  align-items: center;
  font-size: 22rpx;
  color: #aaa;
  line-height: initial;
}
.circle-head .name {
  font-size: 32rpx;
  color: #000;
  width: auto;
  margin-right: 8rpx;
}
.circle-centent text {
  font-size: 30rpx;
}
.circle-centent .cool {
