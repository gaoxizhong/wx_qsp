page{
  background: #E8E8E8;
  padding-top: 28rpx;
}
.list-box{
  padding:0 28rpx;
}
.list-box-items{
  background: #fff;
  font-size: 28rpx;
  border-radius:10px;
  margin: 18rpx 0;
  padding: 28rpx 24rpx;
}
.box-items-head{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}
.items-title{
  font-size: 30rpx;
  font-weight: 700;
}
.items-distance{
  color: #d2d2d2;
  font-size: 27rpx;

}
.items-desc{
  display: flex;
  align-items: flex-start;
}
.items-desc image{
  width: 162rpx;
  height: 162rpx;
}
.items-btn-box{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.btn-bt{
  padding: 8rpx 18rpx;
  background:#FF4A0E;
  color:#fff;
  font-size:28rpx;
  display: flex;
  justify-content: center;
  align-items: flex-start;
  margin-top: 30rpx;
}
.items-desc-title{
  overflow: hidden;
  text-overflow: -o-ellipsis-lastline;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;

}
.items-desc-num{
  font-size: 26rpx;
  color:#f0914a;
}
.items-desc-price{
  margin-top: 26rpx;
}
.yishou-text{
  color: #9e9e9e;
  margin-top: 12rpx;
  font-size: 24rpx;
}
.hoverpin{
  background:#c40000;
}