page{
  background: #fff;
  padding: 30rpx;
  box-sizing: border-box;
}
.second_confirm image.second_confirm_title_image {
  display: block;
  width: 208rpx;
  height: 208rpx;
  margin: 0 auto;
  margin-bottom: 40rpx;
}
.second_confirm{
  padding-top: 140rpx;
  padding-bottom: 50rpx;
  position: relative;
  border:none;
}

.second_confirm_title{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.second_confirm_title view.second_confirm_title_text_1{
  flex: 1;
  font-size: 30rpx;
  font-weight: 600;

}
.second_confirm_title_text_2{
  flex: 1;
  text-align: center;
  font-size: 30rpx;
  padding-top: 20rpx;
  font-weight: 600;
}
.activity-imgs {
  padding: 24rpx 24rpx 24rpx 6rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
  position: relative;
  border:none;
  margin-top: 50rpx;
}

.activity-imgs::after{
  content: '';
  width: 100%;
  height: 1px;
  position: absolute;
  top: 0;
  background: #000;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
}
.activity-imgs view {
  width: 124rpx;
  height: 124rpx;
  position: relative;
  border: 2rpx solid #999;
  border-radius: 12rpx;
  background: #d1d1d1;
}
.activity-imgs view image {
  width: 84rpx;
  height: 84rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
}
.activity-imgs image {
  width: 180rpx;
  height: 180rpx;
  margin: 20rpx 24rpx 10rpx 0;
}
.image_title{
  font-size: 28rpx;
  color: #666;
  padding-bottom: 20rpx;
  position: relative;
  border: none;
}
.image_title::before{
  content: '';
  width: 100%;
  height: 1px;
  position: absolute;
  bottom: 0;
  background: #000;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
}
.lianxi_btn_box{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 100rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.btn_box_left,.lianxi_kefu_btn{
  width: 262rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  text-align: center;
  color: #fff;
  border-radius: 20px;
}
.btn_box_left{
  background: #4ac280;
}
.lianxi_kefu_btn{
  background: #f1b91b;
}

  
    