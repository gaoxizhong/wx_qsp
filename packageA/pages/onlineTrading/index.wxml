
<view class="idleGood-info-box">

  <view class="avatar-namebox">
    <image src="{{ welfare.activityInfo.avatar }}"></image>    
    <text>{{ welfare.activityInfo.nickname }}</text>
  </view>
  <view class="good-info">
    <image src="{{ welfare.activityInfo.img[0] }}"></image>
    <view class="goodinfo-right">
      <view class="">{{welfare.activityInfo.title}}</view>
      <view style="color: #979797;">X1</view>
    </view>
    <view class="good-sum">￥{{welfare.activityInfo.price}}</view>
  </view>

  <view class="add-box">
    <view class="add-box-r">
      <view style="font-size: 30rpx;">{{welfare.activityInfo.discount_phone}}</view>
      <view style="font-size: 28rpx; color: #545454;">{{welfare.activityInfo.discount_address}}</view>
    </view>
    <view class="add-box-l">
      <view bindtap="getRoadLine">
        <image src="/packageA/image/icon-shg-dh.png" mode="widthFix"></image>
        <text>导航</text>
      </view>
      <view data-phoneNumber="{{welfare.activityInfo.discount_phone}}" bindtap="tel">
        <image src="/packageA/image/icon-shg-tp.png" mode="widthFix"></image>
        <text>电话</text>
      </view>
    </view>
  </view>
