page {
  box-sizing: border-box;
  font-family: PingFangSC-Regular,PingFangSC;
  padding:30rpx;
  background: #F7F7F7;
}
.idleGood-info-box {
  width: 100%;
  padding: 37rpx 30rpx;
  box-sizing: border-box;
  background: #fff;
}
.avatar-namebox{
  display: flex;
  align-items: center;
}
.avatar-namebox>image{
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
}
.avatar-namebox>text{
  padding-left: 20rpx;
  font-size: 34rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #020202;
}
.good-info{
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: flex-start;
  box-sizing: border-box;
  background: white;
  margin-top: 40rpx;
}
.good-info>image{
  width: 104rpx;
  height: 104rpx;
  border-radius: 6px;
}
.goodinfo-right{
  flex: 1;
  padding-left: 12rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}
.good-sum{
  font-size: 30rpx;
}
.add-box{
  width: 100%;
  padding: 10rpx 0;
  padding-top: 40rpx;
  box-sizing: border-box;
  margin: 10rpx 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.add-box-r {
  flex: 1;
}
.add-box-l {
  width: 172rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0 6rpx;
}
.add-box-l>view {
  width: 58rpx;
  height: auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
}
.add-box-l>view image{
  width: 51rpx;
  height: 51rpx;
}
