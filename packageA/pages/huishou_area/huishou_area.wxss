page {
  box-sizing: border-box;
  font-family: PingFangSC-Regular,PingFangSC;
}
.page-view{
  padding:2rpx 24rpx 0 24rpx;
  background: #EAEAEA;
}
.hbb-items {
  background: #fff;
  padding: 12rpx 20rpx;
  border-radius: 10px;
  margin-top: 24rpx;
}
.hbb-items .item-title{
  font-size: 28rpx;
  color: #333;
}
.items-list-box{
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: nowrap;
  margin-top: 20rpx;
}
.items-list-box>view{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  width: 25%;
  padding: 10rpx 12rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}
.items-list-box>view.items-list .images-view{
  width: 100rpx;
  height: 100rpx;
  overflow: hidden;
}
.items-list-box>view.items-list .images-view image{
  width: 100%;
  height: 100%;
}
.items-list-box>view.items-list .list-name{
  margin-top: 16rpx;
}
.item-title2{
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  padding: 4rpx 10rpx;
  color: #333;
}
.items-list-box-2{
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
}
.items-list-box-2>view.items-list-2{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  width: 33.333333333333%;
  padding: 10rpx 10rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}
.list-name-4{
  font-size: 23rpx;
  margin-top: 10rpx;

}
.list-name-3{
  width: 100%;
}
.list-name-2,.list-name-4{
  text-align: left;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
   white-space: nowrap;  
}
.items-list-box-2>view.items-list-2 .images-view-2{
  width: 100%;
  height: 212rpx;
  border-radius: 10px;
  overflow: hidden;
  margin-bottom: 12rpx;
}
.items-list-box-2>view.items-list-2 .images-view-2 image{
  width: 100%;
  height: 212rpx;
}









.divide-bold {
  height: 24rpx;
  background-color: #EAEAEA;
}
.divide-lighter {
  height: 6rpx;
  background-color: #EAEAEA;
}
.cates {
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx 0 30rpx;
}
.cates .cateslist {
  height: 72rpx;
  line-height: 72rpx;
  width: 100%;
  margin-right: 40rpx;
  white-space: nowrap;
}
.cates .cateslist .cate-item {
  margin-right: 60rpx;
  display: inline-block;
  font-size: 32rpx;
}
.shoplist .shop-item .shop-box {
  font-size: 24rpx;
  padding: 30rpx 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.shoplist .shop-item image {
  width: 156rpx;
  height: 156rpx;
}
.shoplist .shop-item .shop-detail {
  flex: 1;
  height: 156rpx;
  padding: 8rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.shoplist .shop-detail .shop-info {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
}
.shoplist .shop-detail .shop-info view {
  width: 50%;
  /* height: 36rpx; */
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.shoplist .shop-detail .shop-usercoin {
  text-align: right;
  color: #EB404F;
  display: flex;
  justify-content: flex-end;
}
.shoplist .shop-detail .shop-usercoin image {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
}
.shoplist .shop-detail .shop-star {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.shoplist .shop-detail .shop-star image {
  width: 24rpx;
  height: 24rpx;
  margin-right: 4rpx;
}
.shoplist .shop-detail .shop-distance {
  text-align: right;
}
.shoplist .shop-detail .shop-label {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.shoplist .shop-detail .shop-label view {
  width: 45%;
  text-align: center;
  background-color: #FCF0DE;
  color: #BB5C38;
}
.shoplist .shop-detail .shop-activity {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.shoplist .shop-detail .shop-activity image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 8rpx;
}



