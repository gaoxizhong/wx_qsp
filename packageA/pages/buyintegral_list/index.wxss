page{
  background: #f0f0f0;
  padding: 15rpx 30rpx;
  box-sizing: border-box;
}
.list-item{
  height: 200rpx;
  width: 100%;
  background: #fff;
  display: flex;
  align-items: center;
  margin: 20rpx 0;
  border-radius: 6px;
  overflow: hidden;
}
.item-left{
  flex: 1;
  background: #fff;
  height: 100%;
  box-sizing: border-box;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
}
.item-right{
  width: 140rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #f89906;
  color: #fff;
}
.is-mark {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.7;
  z-index: 99999;
}
.put-box,.is-useinter{
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  width: 602rpx;
  height: auto;
  border-radius: 6px;
  padding: 30rpx 0 0 0; 
  overflow: hidden;
  background: #fff;
  z-index: 99999;
}
.zonge {
  padding: 20rpx 0;
  font-size: 32rpx;
  text-align: center;
  font-weight: 600;
}
.is-integral {
  font-size: 80rpx;
  color: #313131;
  font-weight: 600;
  text-align: center;
  padding: 10rpx 0;
}
.yester-consum {
  padding: 6rpx 16rpx;
  font-size: 30rpx;
  border-radius: 20px;
  background: #f0f0f0;
  display: inline-flex;
}
.info-box {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 24rpx;
}
.remaining {
  text-align: center;
  padding: 20rpx 0;
  font-weight: 600;
}
.info-box>view {
  width: 33.3333333333333333%;
  box-sizing: border-box;
  padding: 30rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}
.digital {
  color: #f89906;
  font-weight: 600;
  margin-top: 20rpx;
  font-size: 40rpx;
}
  
  
  