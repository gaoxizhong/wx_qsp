.my-function-list {
  width: 100%;
  height: auto;
  box-sizing: border-box;
  padding: 0 30rpx;
}
.function-list-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 105rpx;
  font-size: 30rpx;
  position: relative;
  border: none;
}
.function-list-item-phone{
  display: flex;
  align-items: flex-start;
  border: none;
  height: 80rpx;
  font-size: 30rpx;
  position: relative;
}
.function-list-item>picker{
  height: 100%;
  flex: 1;
  display: block;
  position: relative;
}
.function-list-item::before {
  content: '';
  width: 100%;
  height: 1px;
  transform: scaleY(0.5);
  -webkit-transform: scaleY(0.5);
  position: absolute;
  bottom: 0;
  left: 0;
  background: #797979;
}
.function-list-item.function-list-arrw:after {
  content: '';
  display: inline-block;
  width: 8px;
  height: 8px;
  position: absolute;
  top: 50%;
  right: 20rpx;
  transform: rotate(45deg) translateY(-50%);
  border-top: 1px solid #656565;
  border-right: 1px solid #656565;
}
.function-list-item-left {
  display: flex;
  align-items: center;
}
.arrow-item {
  flex: 1;
  height: 100%;
  font-weight: 600;
  font-size: 44rpx;
  color: #000000;
  display: flex;
  align-items: center;
}
.arrow-item-text {
  font-size: 28rpx;
  font-weight: 100;
  padding-right: 24rpx;
  display: flex;
  width: 100%;
  height: 100%;
  justify-content: flex-end;
  align-items: center;
  position: absolute;
  top: 0;
  left: 0;
  box-sizing: border-box;
}
.is_addmark{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  z-index: 9999;
}
.addmark-box {
  width: 82%;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  background: #fff;
  padding: 98rpx 20rpx 20rpx 30rpx;
  z-index: 9999;
  border-radius: 8px;
}
.addinput-box{
  padding-left: 30rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  box-sizing: border-box;
  height: 56rpx;
}
.addinput-title{
  font-size: 30rpx;
  font-weight: 600;
}
.addinput-i{
  font-size: 28rpx;
  flex: 1;
  margin-left: 26rpx;
  height: 100%;
  line-height: 1;
  padding-left: 20rpx;
  border: 1rpx solid #797979;
}
.caption-box{
  font-size: 28rpx;
  color: #9a9a9a;
  margin-top: 30rpx;
}
.addinput-btn{
  width: 80%;
  padding: 16rpx;
  text-align: center;
  background: #4AC081;
  font-size: 28rpx;
  color: #fff;
  margin: 20rpx auto;
  border-radius: 20px;
}
.input-view{
  width: 360rpx;
  border: 1rpx solid #ebebeb;
  margin-left: 16rpx;
  border-radius: 6px;

}
.input-view>input{
  padding: 4rpx 8rpx;
  font-size: 24rpx;
  margin-left: 38rpx;
}

.btn-box{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 68rpx;
  padding: 0 70rpx;
  box-sizing: border-box;
}
.btn-box>view{
  width: 146rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  text-align: center;
  font-weight: 600;
  border-radius: 20px;
  background: #fff;
  box-shadow: 0  0 20rpx 0 #00000020;
}
.btn-box>view.btn-box-lf{
  color: #999;
}
.btn-box>view.btn-box-rg{
  color: #63d080;
}
.btn-box>view.set-btn{
  background: #cecece;
}
.desc-box{
  padding: 14rpx 20rpx;
  width: 100%;
  height: auto;
  box-sizing: border-box;
  font-size: 30rpx;
  color: #999;
  text-align: left;
}