.activity-imgs{
  padding: 24rpx 26rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
}
.activity-imgs view {
  width: 124rpx;
  height: 124rpx;
  position: relative;
  border: 2rpx solid #999;
  border-radius: 12rpx;
  background: #d1d1d1;
}
.activity-imgs view image {
  width: 84rpx;
  height: 84rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
}
.create-btn{
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  color: #fff;
  font-size: 30rpx;
  margin: 60rpx 0 0 0;
  text-align: center;
  background: #4AC081;
  position: fixed;
  bottom: 0;
  z-index: 9999;
  border-radius:0;
}
.activity-imgs image {
  width: 180rpx;
  height: 180rpx;
  margin-right: 24rpx;
}
.list-box{
  padding: 10rpx 26rpx;
}
.list-box-items{
  display: flex;
  align-items: center;
  font-size: 28rpx;
  margin: 20rpx 0;
}
.list-box-items>view{
 width: 120rpx;
}
.list-box-items input{
  flex: 1;
  margin-left: 24rpx;
  height: 42rpx;
  line-height: 42rpx;
  background: #dcdcdc;
  border-radius: 6px;
  font-size: 26rpx;
  padding: 10rpx 0 10rpx 12rpx;

}
.list-box-items-textarea{
  align-items: flex-start;
}
.list-box-items-textarea textarea{
  flex: 1;
  margin-left: 24rpx;
  background: #dcdcdc;
  border-radius: 6px;
  font-size: 26rpx;
  padding: 10rpx 0 10rpx 12rpx;
}
.layer {
  width: 100vw;
  height: 100vh;
  position: fixed;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  z-index: 999;
}
  
.layer .cover {
width: 100%;
height: 100%;
position: fixed;
left: 0;
top: 0;
z-index: 3;
background: #333;
}
.layer .con {
position: relative;
height: 100vh;
z-index: 4;
text-align: center;
font-size: 36rpx;
}
.layer .con image {
position: absolute;
top: 44%;
left: 50%;
transform: translate(-50%, -50%);
}
.layer .con .txt {
width: 120rpx;
height: 120rpx;
line-height: 120rpx;
font-size: 30rpx;
border-radius: 50%;
position: fixed;
left: 50%;
bottom: 160rpx;
text-align: center;
background: #f33;
color: #fff;
transform: translate(-50%, 0);
}
