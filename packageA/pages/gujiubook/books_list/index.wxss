page{
  background: #eaeaea;
  box-sizing: border-box;
  padding: 12rpx 20rpx;
}
.list-items{
  background: #fff;
  font-size: 28rpx;
  padding: 20rpx;
  width: 100%;
  border-radius: 8px;
  box-sizing: border-box;
  overflow: hidden;
  display: flex;
  position: relative;
  margin: 18rpx 0;
}
.list-items>image.items-left{
  width: 110rpx;
  height: 156rpx;

}
.items-right{
  flex: 1;
  margin-left: 30rpx;
  box-sizing: border-box;
  margin-right: 60rpx;

}
.items-right-title{
  font-size: 32rpx;
  font-weight: 600;
  overflow: hidden;
  text-overflow: ellipsis;
}

.right-price{
  font-size: 30rpx;
  color: #4bc283;
  margin-top: 40rpx;
}





.refresh {
  width: 100rpx;
  height: auto;
  position: fixed;
  z-index: 200;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}
.refresh image {
  width: 98rpx;
  height: 98rpx;
  background-color: transparent;
}
.right-date{
  width: auto;
  font-size: 30rpx;
  color: #fff;
  background: #BCBDBB;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: absolute;
  right: 0;
  top: 20rpx;
  border-radius: 2px;
  padding: 8rpx 10rpx;
}
.date-text{
  font-size: 18rpx;
  width: 36rpx;
  margin-left: 10rpx;
}
.quan {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  border: 1rpx solid #333;
  position: absolute;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  bottom: 18rpx;
  right: 20rpx;
}
.quan-in {
  width: 22rpx;
  height: 22rpx;
  border-radius: 50%;
  background-color: #4AC081;
}
.quan1 {
  position: absolute;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  bottom: 16rpx;
  right: 60rpx;
  font-size: 24rpx;
  padding: 8rpx 12rpx;
  color: red;
}
.sanchu {
  position: absolute;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  bottom: 16rpx;
  right: 130rpx;
  font-size: 24rpx;
  padding: 8rpx 12rpx;
  color: red;
}