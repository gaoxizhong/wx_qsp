.all{
  display: flex;
  flex-direction: column;
  align-items:center;
  width: 100%;
  height: 100%;
}
.content{
  display: flex;
  flex-direction: row;
  width: 95%;
  height: auto;
  margin: 20rpx 15rpx;
  border-bottom: 2rpx solid #aaa;
  padding-bottom: 20rpx;
}
image{
  margin-top:4%;
  width: 123rpx;
  height:173rpx;
  margin-left:25rpx; 
}
.left{
   display: flex;
    flex-direction: row;
    width: auto;
    height: 265rpx;
    margin-top: 25rpx;   
}
.right{
  display: flex;
  flex-direction: column;
  width: auto;
  height: auto;
  font-size: 26rpx;
  color: #090909;
  font-family: PingFang-SC-Regular;
  margin-top: 25rpx;
  margin-left: 47rpx;
}
text{
 padding: 1px;
}
.line{
width:95%;
height:5rpx;
background:#aaa;
}
.quan {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  border: 1rpx solid #333;
  position: relative;
  top: 18rpx;
  left: 17rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  
}
.quan-in {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: #64b532;
}
button{
  width: 78%;
  height:90rpx;
  line-height: 90rpx;
  background-image: linear-gradient(to right, #4AC081 , #6cd67f);
  position: fixed; 
  bottom: 20rpx;
  font-size: 40rpx;
  font-family: PingFang-SC-Regular;
  color: #FFFFFF;
  border-radius: 40px;

}
.sao-box{
  width: 86rpx;
  height: auto;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  bottom: 15%;
  right: 20px;
}
.sao-box .sao_image{
  width: 80rpx;
  height: 80rpx;
  margin: 0;
}
.sao-box text{
  font-size: 24rpx;
  color: #333;
}
