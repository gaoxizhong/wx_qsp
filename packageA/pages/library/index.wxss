  height: auto;
  margin: 0 10rpx;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
  margin-top: 10rpx;
}
.books-list>view{
  width: 33.333333333333333333%;
  height: auto;
  padding: 0 10rpx;
  box-sizing: border-box;
  margin: 10rpx 0;
}
.books-list>view>view.nei{
  padding:20rpx 14rpx;
  background: #fff;
  box-sizing: border-box;
  border-radius: 6px;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  position: relative;
}
.nei .top{
  width: 100%;
  height: 236rpx;
  border-radius: 6px;
  overflow: hidden;
  margin-bottom: 20rpx;
}
.nei .top image{
  width: 100%;
  height: 100%;
}
.nei .bott{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  width: 100%;
}
.nei .bott .bott-text-1{
  font-size: 26rpx;
  font-weight: 700;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}
.nei .bott .bott-text-2{
  font-size: 24rpx;
  color: #676767;
}
.box-input {
  flex: 1;
  height: 60rpx;
  background-color: #dcdcdc;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  border-radius: 20px;
  margin:20rpx 20rpx 0 20rpx;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
}
.search-image-2 {
  width: 122rpx;
  height: 60rpx;
  font-size: 28rpx;
  background: #4dc180;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 20px;
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  z-index: 999;
  }
.box-input input{
    height:60rpx;
    width:90%;
    font-size: 24rpx;
    background: #fff;
    text-align: center;
    z-index: 0;
  }
  .d-images{
    animation: scaleDraw ease-in-out infinite 5s;
  }
  @keyframes scaleDraw { 
    0%{
        transform: scale(1);  /*开始为原始大小*/
    }
    25%{
        transform: scale(1.2); /*放大1.1倍*/
    }
    50%{
        transform: scale(1);
    }
    75%{
        transform: scale(1.2);
    }
  }