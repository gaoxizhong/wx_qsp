.kaipian-title-info .rt {
  display: flex;
  align-items: flex-end;
  text-align: right;
  font-size: 26rpx;
  margin-left: 32rpx;
  color: #666;
  height: 120rpx;
  flex-direction: column;
}
.lt .name {
  font-size: 32rpx;
  color: #333;
  height: auto;
  font-weight: 700;
  margin-bottom: 20rpx;
}
.name-text {
  padding-top: 20rpx;
  font-size: 26rpx;
  color: #959393;
}
.saomama{
  margin-top: 16rpx;
  padding: 10rpx 0 10rpx 10rpx;
}
.title-bott{
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  justify-content: center;
  padding-top: 20rpx;
}
.title-bott>view{
  width: 25%;
  height: auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
