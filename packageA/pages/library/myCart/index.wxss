page{background:#ebebeb;color:#000;}
.box-title{
  width: 100%;
  height: auto;
  font-size: 28rpx;
  color:#6b0f0f;
  background: white;
  padding: 30rpx;
  box-sizing: border-box;
}
.cartallview{
  padding: 0 20rpx 130rpx 24rpx;
  position: relative; 
}
.storehed{
  display: flex;
  align-items: center;
  height: 80rpx;
  font-size: 30rpx;
}
/* 单页全局 */

icon{
  margin-left: 20rpx;
}
text{
  margin-left: 20rpx;
}
.shopgoodlist{
  display: flex;
  justify-content: flex-start;
  font-size: 28rpx;
  height: 184rpx;
  padding: 20rpx 0;
  position: relative;
  background: #fff;
  margin: 20rpx 0;
  border-radius: 20rpx;
}
.shopgoodlist image{
  margin:0 20rpx;
  height: 100%;
  width: 120rpx;
}
.shopgoodlist .goodsdata {
 flex: 1;
 padding-right: 12rpx;
}
.shopgoodlist .goodsdata text{
  display: block;
}
.shopgoodlist .goodsdata .goodsname{
  height: auto;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  padding: 4rpx 0;
}
.shopgoodlist .goodsdata .specification{
  font-size: 25rpx;
  color: #b2b2b2;
}
.shopgoodlist .goodsdata .price{
  margin-top: 5rpx;
  font-size: 29rpx;
  color: #f10000;
  position: absolute;
  top: 55%;
  transform: translateY(-50%);

}
.shopgoodlist .goodsdata .goodsnum {
  position: absolute;
  right: 30rpx;
  bottom: 20rpx;
}
.shopgoodlist .goodsdata .goodsnum text{
  margin-left: 0;
  display: inline-block;
  border: 1rpx solid #f5f5f5;
  width: 90rpx;
  height: 53rpx;
  line-height: 53rpx;
  text-align: center;
}
/* 合计 */
.allselected{
  margin-left:0;
  width: 100%;
  background: #fff;
  height: 100rpx;
  display: flex;
  position: fixed;
  align-items:center;
  justify-content:space-between;
  bottom: 0;
  color: #000;
}
.allselected view{
  display: flex;
  flex: 1;
  align-items:center;
  font-size: 30rpx;
}
.allselected view .allprices{
  flex: 1;
  margin:0;
  color: #ec5151;
}
.allselected view .placeanorder{
  margin:0;
  flex: 1;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  color: #ffffff;
}
.remove{
  width:auto;
  height:auto;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  color: #fff;
  position:absolute;
  top: 0rpx;
  right: 20rpx;
  border-radius: 40rpx;
}
.cart-box{
  margin-top: 30rpx;
}
.hover-remove{
  opacity: 0.8;
  color: #333;
}