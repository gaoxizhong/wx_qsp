.title-box{
  padding-top: 35%;
}
.title-img{
  display: flex;
  justify-content: center;
  align-items: center;
}
.title-img image{
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;

}
.box-form{
  padding: 6rpx 24rpx;
  box-sizing: border-box;
}
.box-form view.discount-price{
  flex: 1;
  height: 100%;
}
.box-form view.discount-price{
  box-sizing: border-box;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 18rpx;
  border-bottom: 2rpx solid #eee;
  font-size: 28rpx;
}
.box-form view.discount-price .price1 {
  margin-right: 36rpx;
}
.box-form view.discount-price input {
  font-size: 28rpx;
}
.create-btn {
  width: 90%;
  height: 88rpx;
  line-height: 88rpx;
  color: #fff;
  font-size: 30rpx;
  margin: 60rpx auto 20rpx;
  text-align: center;
  background-image: linear-gradient(to right, #4AC081 , #6cd67f);
  border-radius: 8px;
}
.create-btn-text{
  font-size: 22rpx;
  text-align: center;
  padding-left: 20rpx;
}
.discount-price view picker {
  flex: 1;
  height: 92rpx;
  left: 30%;
}
.xieyi-quan{
  display: flex;
  justify-content: center;
  align-items: center;
}
.quan {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  border: 1rpx solid #333;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  
}
.quan-in {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: #64b532;
}
.xieyi{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.8;
  z-index: 9999;
}
.xieyi-box{
  width: 73%;
  height: auto;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  background: #fff;
  z-index: 9999;
  padding: 28rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  border-radius: 10rpx;
}
.xieyi-box-text{
  font-size: 28rpx;
  color: #474747;
}
.tongyi-btn {
  width: 90%;
  height: 70rpx;
  line-height: 70rpx;
  color: #fff;
  font-size: 30rpx;
  margin: 60rpx auto 20rpx;
  text-align: center;
  background-image: linear-gradient(to right, #4AC081 , #6cd67f);
  border-radius: 8px;
  }
  