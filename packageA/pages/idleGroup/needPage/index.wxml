<view class="mdmjy-box">
  <view class="mdmjy-box1" data-is_tab="1" bindtap="clicktab">

    <view class="mdmjy-titlebox">
      <image src="https://oss.qingshanpai.com/idle/icon-mdmjy.png" mode="widthFix" class="title-left"></image>
      <view class="title-right">
        <view class="right-t">
          <text>面对面交易</text>
          <image src="https://oss.qingshanpai.com/idle/icon-tj.png" mode="widthFix"></image>
        </view>
        <image src="https://oss.qingshanpai.com/idle/{{is_tab == '1' ? 'icon-sel':'icon-nosel'}}.png" mode="widthFix" class="right-icon"></image>
      </view>
    </view>
    <view class="text-box">
      <view class="text-view">
        <image src="https://oss.qingshanpai.com/idle/icon-1.png" mode="widthFix"></image>
