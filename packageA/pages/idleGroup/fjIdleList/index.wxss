@import "/assets/css/myIdleHead.wxss";
@import "/assets/css/idle.wxss";
.myidle-box {
  padding: 24rpx 20rpx;
}
.sechs {
  padding: 14rpx 0;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9999;
  margin: 0 30rpx;
}
.sechs input {
  flex: 1;
  height: 68rpx;
  text-align: center;
  padding: 4rpx 26rpx 4rpx 10rpx;
  background: #f0f0f0;
  border-radius: 20px;
  font-size: 26rpx;
  border: 2px solid #fe8441;
  box-sizing: border-box;
}
.sechs .sech-btn {
  width: 124rpx;
  height: 68rpx;
  font-size: 24rpx;
  color: #474747;
  display: flex;
  justify-content: center;
  align-items: center;
  border: #ffbb3ddd;
  position: absolute;
  right: 30rpx;
  z-index: 999;
  background: #fe8441;
  border-radius: 20px;
}
