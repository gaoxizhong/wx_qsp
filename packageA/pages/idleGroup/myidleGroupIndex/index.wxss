@import "/assets/css/myIdleHead.wxss";
.myidle-box{
  height: auto;
  margin: 0 20rpx;
  box-sizing: border-box;
  border-radius: 6px;
  overflow: initial;
  background: #fff;
  padding: 24rpx 30rpx;
  margin-top: 30rpx;
}
.myidle-box-title{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.myidle-title-l{
  display: flex;
  align-items: center;
}
.myidle-title-l-b{
  width: 16rpx;
  height: 46rpx;
  border-radius: 6px;
  background: linear-gradient(to bottom,#fd8002,#feba2d);
}
.myidle-title-l text{
  padding-left: 14rpx;
  font-size: 32rpx;
  font-weight: 600;
}
.myidle-title-r{
  font-size: 28rpx;
  color: #888;
}
.hoverClass{
  opacity: .8;
}
.idleList-box-item{
  margin-top: 30rpx;
}
.fa-box{
  font-size: 82rpx;
  width: 126rpx;
  height: 126rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto;
  background: #ff905f;
  border-radius: 50%;
  text-align: center;
  font-weight: 600;
  color: #fff;
  padding-bottom: 10rpx;
  box-sizing: border-box;
}
.hoverClass{
  opacity: .8;
}
.circle {
  padding: 44rpx 16rpx 24rpx;
}
.goodinfo {
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
}
.goodinfo>view.goToInfo {
  width: 50%;
  height: auto;
  margin: 23rpx 0;
  padding: 0 10rpx;
  box-sizing: border-box;
}
.goodinfo>view.goToInfo .good-item-view {
  width: 100%;
  margin: 23rpx 0;
  position: relative;
  height: auto;
  box-sizing: border-box;
  border-radius: 6px;
  overflow: hidden;
  box-shadow: 0rpx 0rpx 4px#00000020;
}
.good-item-view image.good-item-img {
  width: 100%;
  height: 326rpx;
  justify-content: center;
  display: block;
  border-radius: 6px;
}
.good-item-view .goodname {
  font-size: 26rpx;
  color: #333;
  display: block;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  margin-top: 10rpx;
  padding: 0 10rpx;
}
.goodprice{
  font-size: 26rpx;
  color: #333;
  display: flex;
  align-items: center;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  padding: 0 10rpx;
}
.goodprice .goodprice-1{
  font-size: 24rpx;
  color: #999;
}
.goodprice .goodprice-2{
  font-size: 32rpx;
  color: #fc6421;
  font-weight: 600;
}
.cj-group-box{
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #ff905f;
}
.cj-box {
  font-size: 32rpx;
  width: 36rpx;
  height: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ff905f;
  border-radius: 50%;
  text-align: center;
  font-weight: 600;
  color: #fff;
  padding-bottom: 6rpx;
  box-sizing: border-box;
  margin-left: 10rpx;
}
.myidle-box-gd{
  width: 100%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}