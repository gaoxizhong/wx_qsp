.bg-box{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 310rpx;
  overflow: hidden;
  z-index: -1;
}
.bg-box>image{
  width: 100%;
  height: 100%;
}
page{
  background: #f5f7f6;
}
.group-explain-box{
  height: 568rpx;
  z-index: 100;
  margin: 0 30rpx;
  box-sizing: border-box;
  border-radius: 6px;
  background: #fff;
  padding: 26rpx 0;
  margin-top: 160rpx;
  position: relative;
  overflow: scroll;
}
.group-explain-head{
  width: auto;
  height: 74rpx;
  line-height: 74rpx;
  font-size: 30rpx;
  font-weight: 600;
  background: #ff905f;
  color: #fff;
  text-align: center;
  position: absolute;
  top: -4px;
  left: 50%;
  transform: translateX(-50%);
  border-bottom-left-radius: 8px;
  border-bottom-right-radius: 8px;
  padding: 0 12rpx;
}
.group-explain-exhibit{
  margin-top: 40rpx;
  font-size: 30rpx;
  padding: 30rpx;
  box-sizing: border-box;
}
.text-items{
  padding: 6rpx 0;
  color: #333;
}
.group-type-box{
    height: auto;
    margin: 30rpx;
    box-sizing: border-box;
    border-radius: 6px;
    overflow: initial;
    background: #fff;
    padding: 30rpx 20rpx;
    display: flex;
    align-items: flex-start;
}
.add-box1 {
  box-sizing: border-box;
  font-size: 28rpx;
  overflow: hidden;
}
.add-box1-items {
  width: 100%;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}
.add-box1-title {
  font-weight: 600;
  width: 120rpx;
  display: inline-table;
}
.scll-list-items {
  padding-left: 4rpx;
  width: 540rpx;
}
.box1-scroll {
  white-space: nowrap;
  padding: 10rpx 0;
  overflow: hidden;
}
.box-scroll-method {
  padding: 8rpx 20rpx;
  border-radius: 20px;
  font-size: 28rpx;
  background: #f5f7f6;
  display: inline-block;
  width: auto;
  margin-right: 18rpx;
  text-align: center;
  position: relative;
  color: #666;
}
.box-scroll-method.active {
  background: #fff0e0;
  color: #ff9151;
}
.create-btn-box{
  height: auto;
  margin: 30rpx;
  box-sizing: border-box;
  border-radius: 6px;
  overflow: initial;
  background: #fff;
  padding: 30rpx 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.create-btn-box>view{
  width: 480rpx;
  height: 80rpx;
  border-radius: 20px;
  background: #ff905f;
  color: #fff;
  font-size: 30rpx;
  text-align: center;
  line-height: 80rpx;
}
.hoverClass{
  opacity: .8;
}

/* 、、、、、附近闲置圈 。。。。。。。、 */
.myidle-box {
  height: auto;
  margin: 0 20rpx;
  box-sizing: border-box;
  border-radius: 6px;
  overflow: initial;
  background: #fff;
  padding: 24rpx 30rpx;
  margin-top: 30rpx;
}
.myidle-box-title {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.myidle-title-l {
  display: flex;
  align-items: center;
}
.myidle-title-r {
  font-size: 32rpx;
  color: #888;
}
.myidle-title-l-b {
  width: 16rpx;
  height: 46rpx;
  border-radius: 6px;
  background: linear-gradient(to bottom,#fd8002,#feba2d);
}
.myidle-title-l text {
  padding-left: 14rpx;
  font-size: 32rpx;
  font-weight: 600;
}
.idleGroup-box {
  width: 100%;
  display: flex;
  align-items: center;
  padding: 20rpx 10rpx;
  box-sizing: border-box;
  margin: 30rpx 0;
  box-shadow: 0 1px 3px #00000020;
  height: 164rpx;
}
.idleGroup-box>image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 6px;
}
.idleGroup-item-info {
  padding-left: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  height: 100%;
  flex: 1;
}
.idleGroup-juli-box {
  width: 140rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.item-info-title {
  font-size: 30rpx;
  font-weight: 600;
}
.idleGroup-item-info>view {
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.item-info-fijin {
  font-size: 28rpx;
}
.item-info-add {
  font-size: 28rpx;
  color: #878787;
  padding: 8rpx 0;
}
.idleGroup-juli {
  font-size: 24rpx;
  color: #878787;
}
