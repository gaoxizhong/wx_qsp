}
.item-info-add {
  font-size: 28rpx;
  color: #878787;
  padding: 8rpx 0;
}
.item-info-fijin {
  font-size: 28rpx;
}
.idleGroup-juli {
  font-size: 24rpx;
  color: #878787;
}
