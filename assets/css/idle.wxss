  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.items-list-box .idleGroupBuddy-img{
  width: 76rpx;
  height: 76rpx;
  border-radius: 50%;
}
.idleGroupBuddy-name{
  font-size: 26rpx;
  color: #333;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  margin-top: 8rpx;

}
.idleGroupBuddy-juli{
  font-size: 24rpx;
  color: #878787;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  margin-top: 8rpx;
}
/* ============================ 附近闲友 以上====================================== */
/* ============================ 附近闲置圈 以下====================================== */
.idleGroup-box {
  width: 100%;
  display: flex;
  align-items: center;
  padding: 20rpx 10rpx;
  box-sizing: border-box;
  margin: 30rpx 0;
  box-shadow: 0 1px 3px #00000020;
