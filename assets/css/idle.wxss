.myidle-box {
  height: auto;
  margin: 0 20rpx;
  box-sizing: border-box;
  border-radius: 6px;
  overflow: initial;
  background: #fff;
  padding: 24rpx 20rpx;
  margin-top: 40rpx;
}
.myidle-box-title {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}
.myidle-title-l {
  display: flex;
  align-items: center;
}
.myidle-title-r {
  font-size: 28rpx;
  color: #888;
}
.myidle-title-l-b {
  width: 16rpx;
  height: 46rpx;
  border-radius: 6px;
  background: linear-gradient(to bottom,#fd8002,#feba2d);
}
.myidle-title-l text {
  padding-left: 14rpx;
  font-size: 32rpx;
  font-weight: 600;
}
/* ============================ 附近闲置 以下====================================== */
.goodinfo {
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
}
.goodinfo>view.goToInfo {
  width: 50%;
  height: auto;
  margin: 23rpx 0;
  padding: 0 10rpx;
  box-sizing: border-box;
}
.goodinfo>view.goToInfo .good-item-view {
  width: 100%;
  position: relative;
  height: auto;
  box-sizing: border-box;
  border-radius: 6px;
  overflow: hidden;
  box-shadow: 0rpx 0rpx 4px#00000020;
}
.shou-tu{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 10;
  opacity: 0.4;
  background: #383838;
  transform: translate(0,0);
}
.shou-tu image{
  width: 200rpx;
  height: 160rpx;
  overflow: hidden;
}

.good-item-view image.good-item-img {
  width: 100%;
  height: 326rpx;
  justify-content: center;
  display: block;
  border-radius: 6px;
}
.good-item-view .goodname {
  font-size: 26rpx;
  color: #333;
  display: block;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  margin-top: 10rpx;
  padding: 0 10rpx;
}
.goodprice {
  font-size: 26rpx;
  color: #333;
  display: flex;
  align-items: center;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  padding: 0 10rpx;
}
.goodprice .goodprice-1 {
  font-size: 24rpx;
  color: #999;
}
.goodprice .goodprice-2 {
  font-size: 32rpx;
  color: #fc6421;
  font-weight: 600;
}
.idle-avar-box{
  width: 100%;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 10rpx 10rpx;

}
.idle-avar-box>image{
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
}
.idle-avar-box>text{
  margin-left: 12rpx;
  font-size: 24rpx;
  color: #999;
}
/* ============================ 附近闲置 以上====================================== */
/* ============================ 附近闲友 以下====================================== */

.idleGroupBuddy-items-box{
  display: flex;
  align-items: flex-start;
  box-sizing: border-box;
  margin-top: 30rpx;
  flex-wrap: wrap;
  width: 100%;
}
.idleGroupBuddy-items-box>view{
  box-sizing: border-box;
  padding: 0 10rpx;
