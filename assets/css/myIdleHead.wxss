page{
  background: #f0f0f0;
}
.indexbg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 182rpx;
  overflow: hidden;
  z-index: -1;
  background: linear-gradient(to bottom,#ffbd6d,#ff9661);
}
.kapian-box {
  height: auto;
  z-index: 100;
  margin: 0 20rpx;
  box-sizing: border-box;
  border-radius: 6px;
  overflow: initial;
  background: #fff;
  padding: 26rpx 20rpx;
  margin-top: 70rpx;
}
.myidle-title-info {
  white-space: normal;
  box-sizing: border-box;
}
.title-bott {
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  justify-content: center;
  padding-top: 20rpx;
}
.title-bott>view {
  width: 25%;
  height: auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
}
.title-bott>view>image {
  width: 84rpx;
  height: 84rpx;
}
.userAvatarUrl-box{
  width: 144rpx;
  height: 144rpx;
  overflow: hidden;
  border-radius: 50%;
  margin: 0 auto;
  margin-top: -80rpx;
}
.userAvatarUrl-box image{
  width: 100%;
  height: 100%;
}
.nickName{
  font-size: 30rpx;
  padding: 10rpx 0;
  text-align: center;
}

.idleList-box {
  width: 100%;
  height: auto;
}
.idleList-box-item {
  position: relative;
  height: auto;
  border: 1px solid rgb(224, 224, 224);
  border-radius: 12rpx;
  box-shadow: 2rpx 2rpx 2rpx #fd783c,-2rpx -2rpx 1rpx rgb(233, 232, 232);
  margin: 18rpx 0;
  box-sizing: border-box;
  padding: 10rpx 0;
}
.circle {
  padding: 44rpx 8rpx 8rpx 8rpx;
  background: #fff;
  height: 100%;
  box-sizing: border-box;
  position: relative;
}
.shop-centent-title {
  height: auto;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: stretch;
}
.retweet-2 {
  flex: 1;
  position: absolute;
  right: 12rpx;
  top: 4rpx;
  width: auto;
  height: 46rpx;
}
.shop-img {
  width: 144rpx;
  height: 144rpx;
  overflow: hidden;
}
.shop-jottings {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: stretch;
  padding-left: 20rpx;
  overflow: hidden;
}
.shop-img .shop-img-width {
  width: 100%;
  height: 100%;
}
.shop-jottings .text {
  font-size: 28rpx;
  height: auto;
  overflow: hidden;
}
.shop-jottings .text, .shop-jottings .text.cool {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.circle-head {
  display: flex;
  align-items: center;
  position: relative;
}
.discount {
  padding-right: 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  margin-top: 12rpx;
}
.discount-price {
  color: #D55B06;
}
.editstatus {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  font-size: 25rpx;
  flex: 1;
  padding: 0 20rpx;
  margin-top: 12rpx;
}
.editstatus .editstatus-item {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
  margin: 0 10rpx;
  padding: 4rpx 18rpx 6rpx 18rpx;
  border-radius: 20rpx;
  border: 1px solid #D55B06;
  color: #D55B06;
}
.more-activit image {
  margin-bottom: 0;
  width: 28rpx;
  height: 6rpx;
}
.retweet-2 button {
  width: 100%;
  height: 40rpx;
  position: relative;
  overflow: visible;
  font-size: 26rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #868585;
}
.retweet-2 button image {
  margin-top: 3rpx;
  width: 30rpx;
  height: 30rpx;
  margin-right: 16rpx;
}
.time{
  padding-right: 16rpx;
  display: flex;
  align-items: center;
  font-size: 22rpx;
  color: #aaa;
  line-height: initial;
}

/* ================ 我的闲圈列表 ====================== */
.idleGroup-box{
  width: 100%;
  display: flex;
  align-items: center;
  padding: 20rpx 10rpx;
  box-sizing: border-box;
  margin: 30rpx 0;
  /* box-shadow: 0 1px 3px #00000020; */
  border-bottom: 1px solid #00000020;
  margin-bottom: 16rpx;
  height: 164rpx;
}
.idleGroup-box>image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 6px;
}
.idleGroup-item-info{
  padding-left: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  height: 100%;
  flex: 1;
}
.idleGroup-item-info>view{
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.item-info-title{
  font-size: 30rpx;
  font-weight: 600;
}
.item-info-add{
  font-size: 28rpx;
  color: #878787;
  padding: 8rpx 0;
}
.item-info-fijin{
  font-size: 28rpx;
}
.idleGroup-btn-box{
  width: 170rpx;
  height: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.idleGroup-btn{
  width: 152rpx;
  height: 58rpx;
  border-radius: 20px;
  background: #ff905f;
  color: #fff;
  font-size: 24rpx;
  text-align: center;
  line-height: 58rpx;
}
.idleGroup-juli-box{
  width: 120rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.idleGroup-juli{
  font-size: 24rpx;
  color: #878787;
}
/* ================ 我的闲圈列表 ====================== */

