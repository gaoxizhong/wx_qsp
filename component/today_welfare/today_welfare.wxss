.welfare-goods {
  background-color: #fff;
  overflow: hidden;
}
.welfare-goods .title {
  height: 68rpx;
  margin: 10rpx 0 30rpx 0;
  display: flex;
  justify-content: center;
  align-items: flex-start;
  position: relative;
}
.welfare-goods .title image {
  width: 55rpx;
  height: 55rpx;
  margin-right: 6rpx;
}
.welfare-goods .title view.title-box {
  height: 55rpx;
  font-size: 30rpx;
  color: #333;
  line-height: 55rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
}
.title-box>view.title-text{
  flex: 1;
  text-align: right;
  padding-right: 60rpx;
}
.welfare-goods .goodinfo {
  padding-bottom: 12rpx;
  border-bottom: 2rpx solid #F4F4F4;
  display: flex;
  justify-content: space-between;
  align-items: flex-status;
  flex-wrap: wrap;
}
.welfare-goods .goodinfo .good-item {
  width: 50%;
  position: relative;
  height: auto;
  box-sizing: border-box;
  padding: 10rpx;
}
.welfare-goods .goodinfo .good-item .good-item-view{
  width: 100%;
  height: auto;
  box-sizing: border-box;
  padding: 20rpx 10rpx;
  border-radius: 6px;
  box-shadow: 0 0 8px 2px #00000015;
}
.welfare-goods .goodinfo .good-item-view image.good-item-img {
  width: 90%;
  height: 244rpx;
  justify-content: center;
  margin: 10rpx auto;
  display: block;
}
.welfare-goods .goodinfo .good-item-view .goodname {
  font-size: 26rpx;
  color: #333;
  display: block;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.welfare-goods .goodinfo .good-item-view .good-desc {
  font-size: 24rpx;
  display: block;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  padding: 4rpx 0;
}

.welfare-goods .change-welfare-good {
  height: 81rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
  width: 180rpx;
}
.welfare-goods .change-welfare-good image {
  width: 36rpx;
  height: 36rpx;
}
.welfare-title{
  display: inline-block;
  font-size: 26rpx;
  color: #4ac081;
  position: absolute;
  top: 56rpx;
  animation: welfareTitle 6s linear infinite;
}
 @keyframes welfareTitle {
  0% {
    left: 0;
  }

  50% {
    left:20%;
  }

  100% {
    left: 0
  }
}
