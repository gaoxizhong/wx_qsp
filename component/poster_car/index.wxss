.poster_car_box{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 99999;
}
.poster_car_mark{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #000;
  z-index: 99999;
  background: rgba(0,0,0,0.5)
}
.poster-view-box{
  width: 100%;
  height: 88%;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  z-index: 99999;
}
.poster-box-title{
  width: 100%;
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
  padding: 10rpx 60rpx;
  box-sizing: border-box;
}
.poster_car_box swiper.swiper {
  flex:1;
  width: 100%;
}
.poster_car_box swiper.swiper swiper-item{
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: auto;
}
.is_secl{
  padding: 0 16rpx;
}
.scaleY-1{
  transform: scaleY(1);
  transition:  0.5s;
}
.scaleY-2{
  transform: scaleY(0.9);
  transition:  0.5s;

}

.poster_car_box swiper.swiper .swiper-item-view{
  width: 100%;
  height: 100%;
  padding: 2rpx;
  border-radius: 6px;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  position: relative;
}
.poster_car_box swiper.swiper .swiper-item-view image {
  width: 100%;
  height: 100%;
}
.active:after{
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  border: 2px solid red;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  -webkit-transform-origin: left top;
  transform-origin: left top;
}
.que_btn{
  width: 220rpx;
  padding: 12rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  background: #4ac280;
  color: #fff;
  border-radius: 20px;
  margin-top: 20rpx;
}